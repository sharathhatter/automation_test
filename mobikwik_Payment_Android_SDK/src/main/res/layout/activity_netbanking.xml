<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/white_container"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/label_bank"
        style="@style/textBlueHeading"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Select Your Bank" />

    <Spinner
        android:id="@+id/spinner_netBanking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btnNetbankingContinue"
        style="@style/new_button"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="56dp"
        android:onClick="confPayment"
        android:text="Continue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" />

</LinearLayout>