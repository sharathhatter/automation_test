<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/uic_bg"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/white_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/amount"
                style="@style/textBlueHeading"
                android:text="@string/card_page_payto_msg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/uic_bg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:visibility="invisible"
                android:text="Please select one of the saved card(s) to pay" />

            <LinearLayout
                android:id="@+id/layout_saved_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@color/uic_bg"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_payment_gateway_add_card"
            style="@style/new_button"
            android:text="Add New Card" >
        </Button>

        <Button
            android:id="@+id/btnContinueWithNewCard"
            style="@style/new_secondary_button"
            android:text="Other Payment Options"
            android:visibility="visible" />
    </LinearLayout>

</ScrollView>