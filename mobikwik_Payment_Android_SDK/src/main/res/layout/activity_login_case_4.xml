<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uic_bg"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/container_pg"
            style="@style/white_container"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp" >

            <TextView
                style="@style/textBlueHeading"
                android:gravity="center_horizontal"
                android:padding="0dp"
                android:text="Email and Phone no. belong to two different accounts" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/fields_margin_top"
                android:background="@color/uic_btn_disable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fields_margin_top"
                android:layout_marginTop="@dimen/fields_margin_top"
                android:text="Please select the account you want to use:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/s_container"
                android:orientation="vertical"
                android:padding="8dp" >

                <RelativeLayout
                    android:id="@+id/rlayout_case4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" >

                    <RadioButton
                        android:id="@+id/rb_case4_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:clickable="false" />

                    <TextView
                        android:id="@+id/txt_case4_email_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/rb_case4_1"
                        android:text="abc@gmail.com"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/uic_header_bg" />

                    <TextView
                        android:id="@+id/txt_case4_ph_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/txt_case4_email_1"
                        android:layout_below="@id/txt_case4_email_1"
                        android:text="98******345"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlayout_case4_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fields_margin_top" >

                    <RadioButton
                        android:id="@+id/rb_case4_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:clickable="false" />

                    <TextView
                        android:id="@+id/txt_case4_email_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/rb_case4_2"
                        android:text="aa****@gmail.com"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/txt_case4_ph_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/txt_case4_email_2"
                        android:layout_below="@id/txt_case4_email_2"
                        android:text="9712345345"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/uic_header_bg" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_case4_continue"
            style="@style/new_button"
            android:text="Continue" />
    </LinearLayout>

</ScrollView>