<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uic_bg"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/container_pg"
        style="@style/full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp" >

        <ViewFlipper
            android:id="@+id/vf_case3_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/white_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/textBlueHeading"
                        android:gravity="center_horizontal"
                        android:text="Phone number Already registered" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_horizontal"
                        android:text="Phone number you have entered is already registered.Please verify this number with OTP(One time password)." />

                    <EditText
                        android:id="@+id/edit_case3_ph"
                        style="@style/wallet_textbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:editable="false"
                        android:enabled="false"
                        android:gravity="center_horizontal"
                        android:text="XXXXXXXXXX" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_case3_sendOTP"
                    style="@style/new_button"
                    android:layout_marginTop="24dp"
                    android:text="Send OTP" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/white_container"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/textBlueHeading"
                        android:gravity="center_horizontal"
                        android:text="Enter OTP" />

                    <TextView
                        android:id="@+id/txt_case3_otp_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_horizontal" />

                    <EditText
                        android:id="@+id/edit_case3_otp"
                        style="@style/wallet_textbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal"
                        android:hint="OTP"
                        android:inputType="number"
                        android:password="true"
                        android:selectAllOnFocus="true" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_case3_continue"
                    style="@style/new_button"
                    android:layout_marginTop="24dp"
                    android:text="Continue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/white_container"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/textBlueHeading"
                        android:gravity="center_horizontal"
                        android:text="Confirm Email" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_horizontal"
                        android:text="An email is already linked with your phone number" />

                    <EditText
                        android:id="@+id/edit_case3_email"
                        style="@style/wallet_textbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:editable="false"
                        android:enabled="false"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal"
                        android:text="Above email id belongs to you?"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_case3_yes"
                    style="@style/new_button"
                    android:layout_marginTop="12dp"
                    android:text="Yes" />

                <Button
                    android:id="@+id/btn_case3_no"
                    style="@style/new_button"
                    android:layout_marginTop="12dp"
                    android:text="No" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/white_container"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/textBlueHeading"
                        android:gravity="center_horizontal"
                        android:text="Confirm Email" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_horizontal"
                        android:text="An email is already linked with your phone number" />

                    <EditText
                        android:id="@+id/edit_case3_email2"
                        style="@style/wallet_textbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:editable="false"
                        android:enabled="false"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_horizontal"
                        android:text="To confirm, complete the above email id below" />

                    <EditText
                        android:id="@+id/edit_case3_type_email"
                        style="@style/wallet_textbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="12dp"
                        android:gravity="center_horizontal"
                        android:hint="Email id"
                        android:inputType="textEmailAddress" >
                    </EditText>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_case3_login"
                    style="@style/new_button"
                    android:layout_marginTop="24dp"
                    android:text="Continue" />
            </LinearLayout>
        </ViewFlipper>
    </LinearLayout>

</ScrollView>