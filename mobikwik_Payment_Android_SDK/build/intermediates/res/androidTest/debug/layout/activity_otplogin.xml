<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/container_pg"
        style="@style/full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:background="@color/uic_bg" >

        <LinearLayout
            style="@style/white_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/merchant"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="12dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone" >
            </TextView>

            <TextView
                android:id="@+id/otpMsg"
                style="@style/text"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fields_margin_top"
                android:text="@string/otp_login_msg"
                tools:ignore="HardcodedText" >
            </TextView>

            <EditText
                android:id="@+id/otp"
                style="@style/wallet_textbox"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="@dimen/fields_margin_top"
                android:hint="One Time Password"
                android:inputType="number"
                android:password="true"
                android:selectAllOnFocus="true" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/LoginButton"
            style="@style/new_button"
            android:text="LOGIN" >
        </Button>

        <Button
            android:id="@+id/ResendOtpButton"
            style="@style/new_secondary_button"
            android:text="Resend OTP" />
    </LinearLayout>

</ScrollView><!-- From: file:/home/jugal/mobile-app/mobile-app/mobikwik_Payment_Android_SDK/src/main/res/layout/activity_otplogin.xml --><!-- From: file:/home/jugal/mobile-app/mobile-app/mobikwik_Payment_Android_SDK/build/intermediates/bundles/debug/res/layout/activity_otplogin.xml -->