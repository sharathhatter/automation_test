<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- Application theme. -->

    <style name="BaseAppTheme.DialogTheme.Input" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlNormal">@color/secondary_text_default_material_light</item>
        <item name="colorAccent">@color/uiv3_action_bar_background</item>
    </style>

    <style name="BaseAppTheme.SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="closeIcon">@drawable/ic_close_grey600_24dp</item>
        <item name="queryHint">@string/search</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BaseAppTheme.AlertDialogNegativeButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorAccent">@color/dark_black</item>
        <item name="android:textColor">@color/dark_black</item>
    </style>

    <style name="BaseAppTheme.AlertDialogPositiveButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorAccent">@color/uiv3_action_bar_background</item>
        <item name="android:textColor">@color/uiv3_action_bar_background</item>
    </style>
    <style name="BaseAppTheme.AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/uiv3_action_bar_background</item>
        <item name="buttonBarNegativeButtonStyle">@style/BaseAppTheme.AlertDialogNegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/BaseAppTheme.AlertDialogPositiveButtonStyle</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/uiv3_action_bar_background</item>
        <item name="colorPrimaryDark">@color/uiv3_status_bar_background</item>
        <item name="colorAccent">@color/uiv3_action_bar_background</item>
        <item name="searchViewStyle">@style/BaseAppTheme.SearchViewStyle</item>
        <item name="alertDialogTheme">@style/BaseAppTheme.AlertDialogStyle</item>
    </style>

    <style name="BaseAppTheme.SearchToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/uiv3_action_bar_background</item>
        <item name="searchViewStyle">@style/BaseAppTheme.SearchViewStyle</item>
        <item name="alertDialogTheme">@style/BaseAppTheme.AlertDialogStyle</item>
    </style>

    <!--<style name="BaseAppTheme."-->

    <style name="BackButtonTheme" parent="BaseAppTheme" />

    <style name="BaseAppTheme.TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/uiv3_action_bar_background</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:background">@color/uiv3_list_bkg_color</item>
        <item name="tabTextAppearance">@style/BaseAppTheme.Tab.TextStyle</item>
        <item name="tabSelectedTextColor">@color/uiv3_action_bar_background</item>
    </style>

    <style name="BaseAppTheme.GiftTabStyle" parent="BaseAppTheme.TabStyle">
        <item name="tabIndicatorColor">@color/dark_green</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="tabTextAppearance">@style/BaseAppTheme.Tab.GiftTextStyle</item>
        <item name="tabSelectedTextColor">@color/dark_green</item>
    </style>

    <style name="BaseAppTheme.Tab.TextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/uiv3_secondary_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BaseAppTheme.Tab.GiftTextStyle" parent="BaseAppTheme.Tab.TextStyle">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LandingPageTheme.DialogTheme" parent="BaseAppTheme.AlertDialogStyle">
        <item name="colorControlNormal">@color/uiv3_action_bar_background</item>
        <item name="colorControlHighlight">@color/uiv3_status_bar_background</item>
        <item name="colorControlActivated">@color/uiv3_status_bar_background</item>
    </style>

    <style name="LandingPageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/translucent_white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="BBNavDrawerTheme" parent="BaseAppTheme" />

    <style name="BBNavDrawerTheme.SpinnerDatePickerTheme" parent="BaseAppTheme" />

    <style name="BaseAppTheme.SearchViewTheme" parent="BBNavDrawerTheme" />

    <!-- Nav drawer style to set width specified by Material Design specification -->
    <style name="NavDrawer" parent="WindowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/nav_drawer_margin_offset</item>
    </style>

    <style name="BBNavDrawerTheme.ToolbarSpinnerTheme" parent="BBNavDrawerTheme">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">#88FFFFFF</item>
    </style>

    <style name="ToolbarSpinnerStyle" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:theme">@style/BBNavDrawerTheme.ToolbarSpinnerTheme</item>
    </style>

    <style name="RightNavDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_margin_offset</item>
    </style>

    <style name="BBEditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BBLoginTextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="BBTextStyle.Gift" parent="android:Widget.TextView">
        <item name="android:textColor">@color/uiv3_secondary_text_color</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <style name="ReadOnlyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:enabled">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="WindowStyle" />

    <style name="DefaultButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/uiv3_primary_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FormButtonStyle" parent="@style/DefaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/main_button_rounded_background</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="RoundedFormButtonStyle" parent="@style/FormButtonStyle">
        <item name="android:background">@drawable/red_login_button</item>
    </style>

    <style name="RoundedFormButtonStyle.Location" parent="@style/FormButtonStyle">
        <item name="android:background">@drawable/red_primary_btn</item>
    </style>

    <style name="CancelFormButtonStyle" parent="@style/FormButtonStyle">
        <item name="android:background">@drawable/cancel_btn</item>
    </style>

    <style name="MoreButtonStyle" parent="@style/DefaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_mini</item>
        <item name="android:paddingBottom">@dimen/padding_mini</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:background">@color/uiv3_action_bar_background</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:text">@string/moreAllCaps</item>
    </style>

    <style name="FooterButtonStyle" parent="@style/DefaultButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@drawable/main_btn_bkg_not_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableRight">@drawable/ic_keyboard_arrow_right_white_36dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>


    <style name="DefaultFooterButtonStyle" parent="@style/DefaultButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@color/uiv3_large_list_item_bck</item>
        <item name="android:textColor">@color/red_color</item>
        <item name="android:drawableRight">@drawable/ic_keyboard_arrow_right_white_36dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="NavTxtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/nav_text_color</item>
    </style>

    <style name="NavHeaderTxtStyle" parent="NavTxtStyle">
        <item name="android:textColor">@color/uiv3_main_nav_header_color</item>
    </style>

    <style name="NavSubTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/nav_text_color</item>
    </style>

    <style name="SectionHeaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/uiv3_primary_text_color</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
    </style>

    <style name="CardViewHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/uiv3_secondary_text_color</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
    </style>

    <style name="BasketOperationTxtStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/uiv3_primary_text_color</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="EmptyPageButtonStyle" parent="@style/DefaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/main_button_rounded_background</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BBNavDrawerTheme.SocialButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BBNavDrawerTheme.FacebookButton" parent="BBNavDrawerTheme.SocialButton">
        <item name="android:src">@drawable/fb_btn_img</item>
    </style>

    <style name="BBNavDrawerTheme.GoogleButton" parent="BBNavDrawerTheme.SocialButton">
        <item name="android:src">@drawable/gplus_btn_img</item>
    </style>

    <style name="SpinnerDialogMode" />

    <style name="Widget.Design.ScrimInsetsFrameLayout" parent="">
        <item name="insetForeground">#4000</item>
    </style>

    <style name="RippleStyle">
        <item name="android:background">@drawable/default_button_clicks</item>
    </style>

    <style name="BottomButtonStyle">
        <item name="android:background">@drawable/main_btn_bkg_not_rounded</item>
    </style>

    <style name="LoginScreenTheme" parent="BaseAppTheme">
        <item name="colorPrimaryDark">@color/primary_dark_material_light</item>
        <item name="colorAccent">@color/white</item>
    </style>
</resources>