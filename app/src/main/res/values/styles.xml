<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- Application theme. -->

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/uiv3_action_bar_background</item>
        <item name="colorPrimaryDark">@color/uiv3_status_bar_background</item>
        <item name="colorAccent">@color/uiv3_action_bar_background</item>
    </style>

    <!-- Nav drawer style to set width specified by Material Design specification -->
    <style name="NavDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/nav_drawer_margin_offset</item>
    </style>

    <style name="RightNavDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_margin_offset</item>
    </style>

    <style name="BBEditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BBAppTheme" parent="BaseAppTheme" />

    <style name="ReadOnlyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:enabled">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="WindowStyle">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="DefaultButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/uiv3_primary_text_color</item>
    </style>

    <!-- Other styles -->
    <style name="Uiv2HeaderButtonStyle">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
        <item name="android:background">@drawable/header_btn_bkg_drawable</item>
        <item name="android:textColor">@color/headerBtnTxtColor</item>
    </style>

    <style name="FormButtonStyle" parent="@style/DefaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/main_button_rounded_background</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="GreenFormButtonStyle" parent="@style/FormButtonStyle">
        <item name="android:background">@drawable/green_button_rounded_bkg</item>
    </style>

    <style name="MoreButtonStyle" parent="@style/DefaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_mini</item>
        <item name="android:paddingBottom">@dimen/padding_mini</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:background">@color/uiv3_action_bar_background</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:text">@string/moreAllCaps</item>
    </style>

    <style name="FooterButtonStyle" parent="@style/DefaultButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@drawable/main_btn_bkg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:drawableRight">@drawable/ic_keyboard_arrow_right_white_36dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="RibbonButtonStyle" parent="@style/DefaultButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@drawable/main_btn_bkg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="Uiv2BigYellowButton">
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/light_grey_text</item>
        <item name="android:background">@color/buttonYellowBkg</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="Uiv2YellowButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_grey_text</item>
        <item name="android:background">@drawable/button_yellow_gradient</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="Uiv2BigGreyButton">
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/buttonGreyBkg</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/light_grey_text</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="Uiv2ShoppingPopBtn">
        <item name="android:background">@color/buttonGreyBkg</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/light_grey_text</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="NavTxtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:drawablePadding">@dimen/padding_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/uiv3_primary_text_color</item>
    </style>

    <style name="SectionHeaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/uiv3_primary_text_color</item>
        <item name="android:textSize">@dimen/heading_2_text_size</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
    </style>

    <style name="CardViewStyle" />

    <style name="CardViewHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/uiv3_secondary_text_color</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
    </style>

    <style name="BasketOperationTxtStyle">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/uiv3_divider_color</item>
        <item name="android:textColor">@color/uiv3_secondary_text_color</item>
    </style>


    <style name="EmptyPageButtonStyle" parent="@style/DefaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/main_button_rounded_background</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BBAppTheme.SocialButton" parent="DefaultButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <!--<item name="android:drawablePadding">@dimen/padding_small</item>-->
        <!--<item name="android:gravity">center_vertical|left</item>-->
    </style>

    <style name="BBAppTheme.FacebookButton" parent="BBAppTheme.SocialButton">
        <item name="android:drawableLeft">@drawable/fb_logo</item>
        <item name="android:background">@color/fb_btn_color</item>
    </style>

    <style name="BBAppTheme.GoogleButton" parent="BBAppTheme.SocialButton">
        <item name="android:drawableLeft">@drawable/gplus_logo</item>
        <item name="android:background">@color/gplus_red</item>
    </style>

    <style name="SpinnerDialogMode" />
</resources>