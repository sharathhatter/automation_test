<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/uiv3_list_bkg_light_color"
        android:paddingLeft="16dp">

        <ImageView
            android:id="@+id/imgDeliveryVan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/delivery_van"
            android:paddingTop="@dimen/padding_normal"
            android:src="@drawable/ic_local_shipping_grey600_36dp" />

        <TextView
            android:id="@+id/txtOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/dark_green"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:text="In Process"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size" />


        <TextView
            android:id="@+id/txtDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toRightOf="@id/imgDeliveryVan"
            android:text="Display name"
            android:textColor="@color/uiv3_list_primary_text_color"
            android:textSize="@dimen/primary_text_size" />


        <TextView
            android:id="@+id/txtFulfilledBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDisplayName"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/imgDeliveryVan"
            android:text="sold and fulfilled by"
            android:textColor="@color/uiv3_list_primary_text_color"
            android:textSize="@dimen/primary_text_size" />

        <TextView
            android:id="@+id/txtSlotDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtFulfilledBy"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/imgDeliveryVan"
            android:text="Tue 30 Sep 2014"
            android:textColor="@color/uiv3_list_primary_text_color"
            android:textSize="@dimen/primary_text_size" />

        <TextView
            android:id="@+id/txtSlotTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSlotDate"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/imgDeliveryVan"
            android:text="7:30 PM to 10:00PM"
            android:textColor="@color/uiv3_list_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <TextView
            android:id="@+id/txtOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSlotTime"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/imgDeliveryVan"
            android:text="ID : BBO-130440-240914"
            android:textColor="@color/uiv3_list_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <TextView
            android:id="@+id/txtNumItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtOrderId"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/imgDeliveryVan"
            android:text="2 Items"
            android:textColor="@color/uiv3_list_secondary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <TextView
            android:id="@+id/txtOrderTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtOrderId"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="2dp"
            android:paddingRight="@dimen/margin_small"
            android:text="Rs. 200"
            android:textColor="@color/uiv3_list_secondary_text_color"
            android:textSize="@dimen/secondary_text_size" />

    </RelativeLayout>
</android.support.v7.widget.CardView>