<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_normal">

        <ImageView
            android:id="@+id/imgShopFromPreviousOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/shopFromPreviousOrder"
            android:src="@drawable/ic_shopping_basket_grey600_36dp" />

        <TextView
            android:id="@+id/txtOrderNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_toLeftOf="@id/imgShopFromPreviousOrder"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/txtSlotDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtOrderNumber"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_toLeftOf="@id/imgShopFromPreviousOrder"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/primary_text_size" />

        <TextView
            android:id="@+id/txtNumItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSlotDate"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_toLeftOf="@id/imgShopFromPreviousOrder" />
    </RelativeLayout>
</android.support.v7.widget.CardView>