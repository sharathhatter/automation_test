<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_drawable">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/landing_page_header_bkg"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarMain"
        android:background="@drawable/landing_drawable"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/changePasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_mini">

            <TextView
                android:id="@+id/txt_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_mini"
                android:paddingLeft="@dimen/padding_small"
                android:textColor="@color/white"
                android:textSize="@dimen/primary_text_size" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_email_id"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_toLeftOf="@+id/txtResendCode"
                android:layout_toStartOf="@+id/txtResendCode"
                android:theme="@style/BBLoginTextInputLayoutStyle"
                app:errorTextAppearance="@style/ErrorStyle">

                <EditText
                    android:id="@+id/edit_text_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLength="6"
                    android:hint="@string/otpString"
                    android:inputType="number"
                    android:paddingLeft="@dimen/padding_small"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/primary_text_size" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/txtResendCode"
                style="@style/TransparentRippleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text_input_otp"
                android:layout_alignEnd="@+id/text_input_new_passwd"
                android:layout_alignRight="@+id/text_input_new_passwd"
                android:layout_alignTop="@+id/text_input_otp"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_small"
                android:text="@string/resend_code"
                android:textColor="@drawable/resend_button_text_selector"
                android:textSize="@dimen/primary_text_size" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_new_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_input_otp"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:theme="@style/BBLoginTextInputLayoutStyle"
                app:errorTextAppearance="@style/ErrorStyle">

                <EditText
                    android:id="@+id/new_pass_word_edit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_visibility_white_18dp"
                    android:ems="10"
                    android:hint="@string/newPassword"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:paddingLeft="@dimen/padding_small"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/primary_text_size" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_confirm_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_input_new_passwd"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:theme="@style/BBLoginTextInputLayoutStyle"
                app:errorTextAppearance="@style/ErrorStyle">

                <EditText
                    android:id="@+id/confirm_pwd_edit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_visibility_white_18dp"
                    android:ems="10"
                    android:hint="@string/confirmPassword"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:paddingLeft="@dimen/padding_small"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/primary_text_size" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/txt_update_password"
                style="@style/RoundedFormButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/text_input_confirm_passwd"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingBottom="@dimen/padding_normal"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:paddingTop="@dimen/padding_normal"
                android:text="@string/UPDATE"
                android:textSize="@dimen/primary_text_size" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
