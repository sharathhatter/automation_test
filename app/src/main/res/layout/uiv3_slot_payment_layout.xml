<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uiv3_list_bkg_color">

    <Button
        android:id="@+id/btnFooter"
        style="@style/FooterButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/proceedToOrderReview" />

    <include
        layout="@layout/uiv3_swipe_tab_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnFooter" />
</RelativeLayout>