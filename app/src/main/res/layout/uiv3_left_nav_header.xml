<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgNavHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/drawer_open"
        android:scaleType="fitXY"
        android:src="@drawable/nav_header" />

    <ImageView
        android:id="@+id/imgNavMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/logo_translucent_bkg"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/padding_mini"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtNavSalutation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgNavHeader"
        android:layout_below="@id/imgNavMain"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:drawableRight="@drawable/ic_arrow_drop_down_white_24dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/primary_text_size"
        android:textStyle="bold" />

</RelativeLayout>