<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uiv3_list_bkg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/uiv3_list_bkg_color">

        <TextView
            android:id="@+id/txtThankYou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:text="@string/multipleOrderThankyouText"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/primary_text_size" />

        <View
            android:id="@+id/viewSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txtThankYou"
            android:background="@color/uiv3_divider_color" />

        <ListView
            android:id="@+id/listOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewSeparator"
            android:divider="@null"
            android:dividerHeight="0dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/lblContinueShopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"
        android:text="@string/continue_shopping_txt"
        android:textColor="@color/uiv3_primary_btn_bkg"
        android:textSize="@dimen/secondary_text_size" />

</LinearLayout>