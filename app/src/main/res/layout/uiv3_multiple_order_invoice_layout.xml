<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:paddingBottom="@dimen/margin_normal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/thank_you_page_top_margin"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bb_logo_transparent_bkg" />

        <TextView
            android:id="@+id/txtThankYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/thankYouOrderPlacedHeader"
            android:textColor="@color/red_color"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/txtOrderPlaced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/red_color"
            android:textSize="@dimen/large_text_size" />

        <LinearLayout
            android:id="@+id/layoutOrderNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="vertical">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutKnowMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@drawable/grey_border_no_rounds"
            android:padding="@dimen/padding_normal">

            <TextView
                android:id="@+id/lblKnowMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_large"
                android:text="@string/know_more"
                android:textColor="@android:color/black"
                android:textSize="@dimen/secondary_text_size" />

            <TextView
                android:id="@+id/txtAddMoreProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_toLeftOf="@id/lblKnowMore"
                android:textColor="@android:color/black"
                android:textSize="@dimen/primary_text_size" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnLogin"
            style="@style/FormButtonStyle"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:background="@drawable/red_rounded_btn_bkg"
            android:onClick="onContinueBtnClicked"
            android:text="@string/continue_shopping"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size" />

    </LinearLayout>
</ScrollView>