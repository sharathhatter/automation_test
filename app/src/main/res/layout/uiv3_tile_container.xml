<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnMore"
        style="@style/MoreButtonStyle"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_mini" />

    <TextView
        android:id="@+id/txtListTitle"
        style="@style/SectionHeaderTextStyle"
        android:layout_toLeftOf="@id/btnMore" />

    <LinearLayout
        android:id="@+id/layoutTileContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtListTitle"
        android:layout_marginLeft="@dimen/margin_mini"
        android:layout_marginRight="@dimen/margin_mini"
        android:orientation="horizontal" />
</RelativeLayout>
