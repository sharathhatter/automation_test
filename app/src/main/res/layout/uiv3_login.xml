<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_bkg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtSigninTermsAndCond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/semi_transparent_bkg"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:text="Hello World"
            android:textColor="@color/uiv3_secondary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <ScrollView
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/txtSigninTermsAndCond"
            android:layout_alignParentTop="true"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/padding_large"
                    android:layout_height="match_parent"
                    android:background="@color/semi_transparent_bkg" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/semi_transparent_bkg"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_normal"
                        android:paddingTop="@dimen/padding_normal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/plus_sign_in_button"
                                style="@style/LowerCaseButtonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/gplus_red"
                                android:drawableLeft="@drawable/btn_gplus_normal"
                                android:paddingRight="@dimen/padding_normal"
                                android:text="@string/use_google"
                                android:textColor="@color/com_facebook_loginview_text_color"
                                android:textSize="@dimen/primary_text_size" />

                            <Button
                                android:id="@+id/btnFBLogin"
                                style="@style/LowerCaseButtonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/margin_normal"
                                android:background="@drawable/com_facebook_button_blue"
                                android:drawableLeft="@drawable/com_facebook_inverse_icon"
                                android:paddingBottom="@dimen/com_facebook_loginview_padding_bottom"
                                android:paddingLeft="@dimen/com_facebook_loginview_padding_bottom"
                                android:paddingRight="@dimen/com_facebook_loginview_padding_right"
                                android:paddingTop="@dimen/com_facebook_loginview_padding_top"
                                android:text="@string/use_facebook"
                                android:textColor="@color/com_facebook_loginview_text_color"
                                android:textSize="@dimen/com_facebook_loginview_text_size" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_normal">

                            <TextView
                                android:id="@+id/txtOrSeparator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/orLoginUsingEmail"
                                android:textColor="@color/uiv3_secondary_text_color"
                                android:textSize="@dimen/secondary_text_size" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/margin_small"
                                android:layout_toLeftOf="@id/txtOrSeparator"
                                android:background="@color/uiv3_divider_color" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_toRightOf="@id/txtOrSeparator"
                                android:background="@color/uiv3_divider_color" />
                        </RelativeLayout>
                    </LinearLayout>

                    <AutoCompleteTextView
                        android:id="@+id/emailInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/see_thru_transparent_bkg"
                        android:ems="10"
                        android:hint="@string/email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/padding_normal"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/uiv3_transparent_view_hint_color"
                        android:textSize="@dimen/secondary_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/transparent_view_border_height"
                        android:background="@color/semi_transparent_bkg" />

                    <EditText
                        android:id="@+id/editTextPasswd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/see_thru_transparent_bkg"
                        android:ems="10"
                        android:hint="@string/password"
                        android:imeActionLabel="@string/action_sign_in_short"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textPassword"
                        android:padding="@dimen/padding_normal"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/uiv3_transparent_view_hint_color"
                        android:textSize="@dimen/secondary_text_size" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/semi_transparent_bkg"
                        android:paddingTop="@dimen/padding_small">

                        <CheckBox
                            android:id="@+id/chkRememberMe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:checked="true"
                            android:text="@string/remember"
                            android:textColor="@color/uiv3_transparent_view_hint_color"
                            android:textSize="@dimen/secondary_text_size" />

                        <CheckBox
                            android:id="@+id/chkShowPasswd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@id/chkRememberMe"
                            android:text="@string/showPassword"
                            android:textColor="@color/uiv3_transparent_view_hint_color"
                            android:textSize="@dimen/secondary_text_size" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_normal"
                        android:background="@color/semi_transparent_bkg" />

                    <Button
                        android:id="@+id/btnLogin"
                        style="@style/FormButtonStyle"
                        android:layout_width="match_parent"
                        android:background="@drawable/transparent_bkg"
                        android:paddingBottom="@dimen/padding_small"
                        android:paddingTop="@dimen/padding_small"
                        android:text="@string/signIn"
                        android:textSize="@dimen/large_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/semi_transparent_bkg"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtForgotPasswd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:clickable="true"
                            android:text="@string/forgotPasswd"
                            android:textColor="@color/uiv3_transparent_view_hint_color"
                            android:textSize="@dimen/large_text_size" />

                        <TextView
                            android:id="@+id/txtSignup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/margin_normal"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:text="@string/loginPageSignUpText"
                            android:textColor="@color/uiv3_transparent_view_hint_color"
                            android:textSize="@dimen/large_text_size" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/padding_large"
                    android:layout_height="match_parent"
                    android:background="@color/semi_transparent_bkg" />
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</LinearLayout>