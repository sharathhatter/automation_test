<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgContent"
        android:contentDescription="@string/alt_placeholder"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imgContent"
        android:layout_alignRight="@id/imgContent"
        android:textSize="@dimen/secondary_text_size"
        android:textColor="@color/white"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_mini"
        android:paddingRight="@dimen/padding_mini"
        android:background="#AA000000"
        android:layout_alignBottom="@id/imgContent"
        android:id="@+id/txtCaption"/>
</RelativeLayout>