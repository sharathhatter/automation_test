<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCarouselContainer"
    android:layout_width="@dimen/carousel_img_width"
    android:layout_height="@dimen/carousel_img_height"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutCarouselSubContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/uiv3_accent_color"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/padding_mini"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_below="@id/txtTitle"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/padding_mini"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size" />
    </RelativeLayout>
</LinearLayout>