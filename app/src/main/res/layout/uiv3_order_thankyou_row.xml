<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:background="@drawable/grey_border_no_rounds"
    android:padding="@dimen/padding_normal">

    <TextView
        android:id="@+id/txtSlotTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#841206"
        android:textSize="@dimen/primary_text_size" />

    <TextView
        android:id="@+id/txtOrderNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSlotTime"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/primary_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txtAmount"
        android:text="@string/order_pay_now_amount"
        android:textColor="@color/uiv3_primary_text_color"
        android:layout_below="@id/txtOrderNum"
        android:textSize="@dimen/primary_text_size"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txtVariableWeightMsg"
        android:textColor="@color/uiv3_primary_text_color"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_below="@id/btnPayNow"
        android:textSize="@dimen/primary_text_size"
        android:layout_height="wrap_content" />
</RelativeLayout>