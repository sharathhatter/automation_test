<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewOrderReview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/uiv3_list_bkg_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:padding="@dimen/padding_normal">

            <ImageView
                android:id="@+id/imgAlmostDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/info"
                android:src="@drawable/ic_info_outline_grey600_24dp" />

            <TextView
                android:id="@+id/txtOrderSummaryMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_mini"
                android:layout_toRightOf="@id/imgAlmostDone"
                android:text="@string/orderSummaryDefaultMsg"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/secondary_text_size" />

        </RelativeLayout>

        <TextView
            style="@style/CardViewHeading"
            android:text="@string/deliverySlotHeading" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:paddingBottom="@dimen/padding_normal"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal">

            <ImageView
                android:id="@+id/imgDeliveryVan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:contentDescription="@string/delivery_van"
                android:src="@drawable/ic_access_time_grey600_24dp" />

            <LinearLayout
                android:id="@+id/layoutDeliverySlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_img_content_margin"
                android:layout_toRightOf="@id/imgDeliveryVan"
                android:orientation="vertical" />
        </RelativeLayout>


        <TextView
            style="@style/CardViewHeading"
            android:text="@string/contactHeading" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_normal">

            <TextView
                android:id="@+id/txtMemberName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_small"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/secondary_text_size" />

            <TextView
                android:id="@+id/txtMemberAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/secondary_text_size" />

            <TextView
                android:id="@+id/txtMemberContactNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_mini"
                android:layout_marginTop="@dimen/margin_small"
                android:drawableLeft="@drawable/ic_call_grey600_18dp"
                android:drawablePadding="@dimen/padding_mini"
                android:singleLine="false"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/secondary_text_size" />
        </LinearLayout>

        <TextView
            style="@style/CardViewHeading"
            android:text="@string/paymentHeading" />

        <LinearLayout
            android:id="@+id/layoutOrderSummaryInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_normal">

        </LinearLayout>
    </LinearLayout>
</ScrollView>