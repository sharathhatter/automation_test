<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deliveryAddressContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uiv3_large_list_item_bck"
    android:orientation="vertical">

    <include
        android:id="@+id/noDeliveryAddLayout"
        layout="@layout/uiv3_empty_data_text"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layoutCheckoutProgressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <include
        android:id="@+id/layoutCheckoutFooter"
        layout="@layout/uiv3_checkout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/txtAddressLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutCheckoutProgressContainer"
        android:layout_margin="@dimen/margin_normal"
        android:drawableLeft="@drawable/ic_location_on_black_18dp"
        android:drawablePadding="@dimen/margin_mini"
        android:paddingBottom="@dimen/padding_mini"
        android:paddingTop="@dimen/padding_mini"
        android:text="@string/delivery_address"
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/primary_text_size"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtChangeAddress"
        style="@style/RippleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layoutCheckoutProgressContainer"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_toRightOf="@+id/txtAddressLbl"
        android:background="@android:color/transparent"
        android:gravity="right|end"
        android:padding="@dimen/padding_mini"
        android:text="@string/changeAllCaps"
        android:textColor="@color/red"
        android:textSize="@dimen/secondary_text_size"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/layoutAddressDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAddressLbl"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/dimen_2"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_12"
        android:visibility="visible">


        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/primary_text_size"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDeliveryAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_weight="1"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/secondary_text_size" />

            <ImageView
                android:id="@+id/imgEditLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:src="@drawable/ic_edit"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtPh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_mini"
            android:drawableLeft="@drawable/ic_call_grey600_18dp"
            android:drawablePadding="@dimen/margin_small"
            android:text="8861356031"
            android:textColor="@color/uiv3_secondary_text_color"
            android:textSize="@dimen/secondary_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/partial_address_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:drawablePadding="@dimen/dimen_2"
            android:drawableRight="@drawable/ic_warning_red"
            android:padding="@dimen/dimen_2"
            android:text="@string/incomplete"
            android:textColor="@color/uiv3_action_bar_background"
            android:textSize="@dimen/small_text_size"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>