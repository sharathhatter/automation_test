<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_normal">

    <ImageView
        android:id="@+id/imgShopFromPreviousOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/shopFromPreviousOrder"
        android:src="@drawable/ic_shopping_basket_grey600_36dp" />

    <TextView
        android:id="@+id/txtOrderId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_toLeftOf="@id/imgShopFromPreviousOrder"
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/large_text_size" />

    <TextView
        android:id="@+id/txtSlotDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtOrderId"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_toLeftOf="@id/imgShopFromPreviousOrder"
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/primary_text_size" />

    <TextView
        android:id="@+id/txtNumItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSlotDate"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_toLeftOf="@id/imgShopFromPreviousOrder" />
</RelativeLayout>