<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_small"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_mini"
        android:text="1."
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/primary_text_size" />

    <ImageView
        android:id="@+id/imgRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_mini"
        android:contentDescription="@string/remove"
        android:src="@drawable/ic_delete_grey600_24dp" />


    <TextView
        android:id="@+id/txtItemInBasketAndProductDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_mini"
        android:layout_toLeftOf="@id/imgRemove"
        android:layout_toRightOf="@+id/txtIndex"
        android:text="product description of a product asdasd asdfasdf asdfasdf"
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/primary_text_size"/>

    <include
        android:id="@+id/layoutBasketOperation"
        layout="@layout/uiv3_basket_operation_control"
        android:layout_width="wrap_content"
        android:layout_below="@id/txtItemInBasketAndProductDesc"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small" />

    <TextView
        android:id="@+id/txtTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtItemInBasketAndProductDesc"
        android:layout_below="@id/txtItemInBasketAndProductDesc"
        android:text="25.00"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/uiv3_secondary_text_color"
        android:textSize="@dimen/primary_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/layoutBasketOperation"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@color/strokeLine" />

</RelativeLayout>