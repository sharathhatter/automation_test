<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbarMain"
        layout="@layout/uiv3_tool_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutChooseLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/padding_normal"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/lblCurrentLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/yourCurrentLoc"
                android:textColor="@color/uiv3_secondary_text_color"
                android:textSize="@dimen/secondary_text_size" />

            <TextView
                android:id="@+id/txtDetectedArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblCurrentLocation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_mini"
                android:text="@string/unknown"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/primary_text_size" />

            <TextView
                android:id="@+id/txtNotServedMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtDetectedArea"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_normal"
                android:textColor="@color/uiv3_ok_label_color"
                android:textSize="@dimen/small_text_size"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_below="@id/txtNotServedMsg"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnToCurrentLocation"
                    style="@style/FormButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:background="@drawable/red_primary_btn"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:onClick="onLocationButtonClicked"
                    android:text="@string/toMyCurrentLocation"
                    android:textSize="@dimen/secondary_text_size" />

                <TextView
                    android:id="@+id/lblOr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/OR"
                    android:textColor="@color/uiv3_primary_text_color"
                    android:textSize="@dimen/primary_text_size" />

                <Button
                    android:id="@+id/btnChooseLocation"
                    style="@style/FormButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_mini"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:background="@drawable/cancel_btn"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:onClick="onLocationButtonClicked"
                    android:paddingBottom="@dimen/padding_small"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingRight="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_small"
                    android:text="@string/selectLocationManually"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/secondary_text_size" />


            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>