<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_mini"
    android:layout_marginRight="@dimen/margin_mini"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_mini"
        android:paddingRight="@dimen/padding_mini"
        android:paddingTop="@dimen/padding_mini">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="@dimen/product_image_width"
            android:layout_height="@dimen/product_image_height"
            android:contentDescription="@string/product_image"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/image_404" />

        <ImageView
            android:id="@+id/imgRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="-6dp"
            android:contentDescription="@string/remove"
            android:src="@drawable/ic_delete_grey600_24dp" />

        <ImageView
            android:id="@+id/imgLiquorIcon"
            android:layout_width="@dimen/fulfillment_image_size"
            android:layout_height="@dimen/fulfillment_image_size"
            android:layout_marginLeft="@dimen/margin_mini"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toRightOf="@id/imgProduct"
            android:adjustViewBounds="true"
            android:contentDescription="@string/alt_placeholder"
            android:src="@drawable/delete" />

        <TextView
            android:id="@+id/txtProductDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_mini"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/imgRemove"
            android:layout_toRightOf="@id/imgLiquorIcon"
            android:text="Delux Prestige - test test test test test test test test"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/primary_text_size" />

        <TextView
            android:id="@+id/txtSalePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtProductDesc"
            android:layout_marginLeft="@dimen/margin_mini"
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_toRightOf="@id/imgProduct"
            android:text="Rs 1000.00"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <TextView
            android:id="@+id/txtSaving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtProductDesc"
            android:layout_marginLeft="@dimen/margin_mini"
            android:paddingTop="5dp"
            android:layout_toRightOf="@id/txtSalePrice"
            android:drawablePadding="@dimen/padding_mini"
            android:text="Save: Rs 10000.00"
            android:textColor="@color/saveColor"
            android:textSize="@dimen/small_text_size" />

        <include
            android:id="@+id/layoutBasketOperation"
            layout="@layout/uiv3_basket_operation_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSalePrice"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/margin_mini"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toRightOf="@id/imgProduct" />

        <ImageView
            android:id="@+id/imgRegularImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutBasketOperation"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_mini"
            android:adjustViewBounds="true"
            android:contentDescription="@string/promo"
            android:maxHeight="20dp"
            android:maxWidth="24dp"
            android:src="@drawable/ic_keyboard_arrow_right_grey600_24dp" />

        <TextView
            android:id="@+id/txtRegularPriceAndQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutBasketOperation"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_toRightOf="@id/imgRegularImg"
            android:paddingBottom="@dimen/padding_mini"
            android:text="promo test"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <TextView
            android:id="@+id/lblRegularPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutBasketOperation"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_toRightOf="@id/txtRegularPriceAndQty"
            android:text="@string/regular_price"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <ImageView
            android:id="@+id/imgPromoUsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblRegularPrice"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_mini"
            android:adjustViewBounds="true"
            android:contentDescription="@string/promo"
            android:maxHeight="20dp"
            android:maxWidth="24dp"
            android:src="@drawable/promo_used" />

        <TextView
            android:id="@+id/txtPromoPriceAndQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblRegularPrice"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_toRightOf="@id/imgPromoUsed"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_small"
            android:text="testing for promo"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <TextView
            android:id="@+id/txtPromoNameDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblRegularPrice"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_toRightOf="@id/txtPromoPriceAndQty"
            android:paddingBottom="@dimen/padding_mini"
            android:paddingLeft="@dimen/padding_mini"
            android:text="testing for Promo Name, description and bla bla bla..."
            android:textColor="@color/uiv3_link_color"
            android:textSize="@dimen/secondary_text_size" />

    </RelativeLayout>

    <View
        android:id="@+id/basketOperationSeparatorLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/uiv3_divider_color" />
</LinearLayout>