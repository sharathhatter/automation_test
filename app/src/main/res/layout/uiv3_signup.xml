<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_page_bkg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtSigninTermsAndCond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:textColor="@color/uiv3_secondary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <ScrollView
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/txtSigninTermsAndCond"
            android:layout_alignParentTop="true"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_large"
                android:paddingRight="@dimen/margin_large"
                android:paddingTop="@dimen/padding_normal">

                <Button
                    android:id="@+id/btnFBLogin"
                    style="@style/BBAppTheme.FacebookButton"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:text="@string/facebookSignup" />

                <Button
                    android:id="@+id/plus_sign_in_button"
                    style="@style/BBAppTheme.GoogleButton"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:text="@string/googleSignup" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_normal">

                    <TextView
                        android:id="@+id/txtOrSeparator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/orSignupUsingEmail"
                        android:textColor="@color/uiv3_secondary_text_color"
                        android:textSize="@dimen/secondary_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_toLeftOf="@id/txtOrSeparator"
                        android:background="@color/uiv3_divider_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_toRightOf="@id/txtOrSeparator"
                        android:background="@color/uiv3_divider_color" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextFirstName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/see_thru_transparent_bkg"
                        android:ems="10"
                        android:hint="@string/firstName"
                        android:inputType="textPersonName"
                        android:maxLength="30"
                        android:padding="@dimen/padding_normal"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/uiv3_transparent_view_hint_color"
                        android:textSize="@dimen/secondary_text_size" />

                    <EditText
                        android:id="@+id/editTextLastName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@color/see_thru_transparent_bkg"
                        android:ems="10"
                        android:hint="@string/lastName"
                        android:inputType="textPersonName"
                        android:maxLength="30"
                        android:padding="@dimen/padding_normal"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/uiv3_transparent_view_hint_color"
                        android:textSize="@dimen/secondary_text_size" />
                </LinearLayout>

                <AutoCompleteTextView
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/see_thru_transparent_bkg"
                    android:ems="10"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/padding_normal"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/uiv3_transparent_view_hint_color"
                    android:textSize="@dimen/secondary_text_size" />

                <EditText
                    android:id="@+id/editTextPasswd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/see_thru_transparent_bkg"
                    android:ems="10"
                    android:hint="@string/password"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:padding="@dimen/padding_normal"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/uiv3_transparent_view_hint_color"
                    android:textSize="@dimen/secondary_text_size" />

                <Spinner
                    android:id="@+id/spinnerCity"
                    style="@style/SpinnerDialogMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/see_thru_transparent_bkg" />

                <CheckBox
                    android:id="@+id/chkShowPasswd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="@string/showPassword"
                    android:textColor="@color/uiv3_transparent_view_hint_color"
                    android:textSize="@dimen/secondary_text_size" />

                <Button
                    android:id="@+id/btnRegister"
                    style="@style/FormButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:background="@color/see_thru_transparent_bkg"
                    android:paddingBottom="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_small"
                    android:text="@string/signUp"
                    android:textSize="@dimen/large_text_size" />
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</LinearLayout>