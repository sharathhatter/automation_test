<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutLogin"
    style="@style/WindowStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_bkg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/landing_page_header_bkg"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarMain">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:paddingTop="@dimen/padding_normal">

            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/firstName"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:padding="@dimen/padding_normal"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/translucent_white"
                android:textSize="@dimen/secondary_text_size" />

            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/lastName"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:padding="@dimen/padding_normal"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/translucent_white"
                android:textSize="@dimen/secondary_text_size" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="@dimen/padding_normal"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/translucent_white"
                android:textSize="@dimen/secondary_text_size" />

            <EditText
                android:id="@+id/editTextPasswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_mini"
                android:drawableRight="@drawable/ic_visibility_white_18dp"
                android:ems="10"
                android:hint="@string/password"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:padding="@dimen/padding_normal"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/translucent_white"
                android:textSize="@dimen/secondary_text_size" />

            <EditText
                android:id="@+id/editTextChooseCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_mini"
                android:drawableRight="@drawable/ic_arrow_drop_down_white_24dp"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/location"
                android:longClickable="false"
                android:padding="@dimen/padding_normal"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/translucent_white"
                android:textSize="@dimen/secondary_text_size" />

            <Button
                android:id="@+id/btnRegister"
                style="@style/FormButtonStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@drawable/red_rounded_btn_bkg"
                android:paddingBottom="@dimen/padding_normal"
                android:paddingTop="@dimen/padding_normal"
                android:text="@string/signUpCaps"
                android:textColor="@color/white"
                android:textSize="@dimen/large_text_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="48dp">

                <TextView
                    android:id="@+id/txtOrSeparator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/OR"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_toLeftOf="@id/txtOrSeparator"
                    android:background="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_toRightOf="@id/txtOrSeparator"
                    android:background="@color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/lblConnectUsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/connectUsing"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/btnFBLogin"
                        style="@style/BBAppTheme.FacebookButton"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:contentDescription="@string/facebookSignup" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/plus_sign_in_button"
                        style="@style/BBAppTheme.GoogleButton"
                        android:contentDescription="@string/googleSignup" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>