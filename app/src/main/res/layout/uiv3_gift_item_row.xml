<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding_normal">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="@dimen/product_image_width"
        android:layout_height="@dimen/product_image_height"
        android:contentDescription="@string/product_image"
        android:scaleType="fitCenter"
        android:src="@drawable/noimage" />

    <TextView
        android:id="@+id/txtProductDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_mini"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_toRightOf="@id/imgProduct"
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/primary_text_size" />

    <TextView
        android:id="@+id/txtProductBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtProductDesc"
        android:layout_marginLeft="@dimen/margin_mini"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_toRightOf="@id/imgProduct"
        android:textColor="@color/uiv3_secondary_text_color"
        android:textSize="@dimen/secondary_text_size" />

    <TextView
        android:id="@+id/txtProductQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtProductBrand"
        android:layout_marginLeft="@dimen/margin_mini"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_toRightOf="@id/imgProduct"
        android:text="@string/qtyInBasket"
        android:textColor="@color/uiv3_secondary_text_color"
        android:textSize="@dimen/secondary_text_size" />

    <TextView
        android:id="@+id/txtProductGiftWrapPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtProductQuantity"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_mini"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_toRightOf="@id/imgProduct"
        android:textColor="@color/uiv3_secondary_text_color"
        android:textSize="@dimen/secondary_text_size" />

    <LinearLayout
        android:id="@+id/layoutGiftOperations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtProductGiftWrapPrice"
        android:layout_toRightOf="@id/imgProduct"
        android:gravity="left|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDecreaseQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_mini"
            android:layout_marginRight="@dimen/margin_small"
            android:text="@string/minusSymbol"
            android:textColor="@color/uiv3_dialog_header_text_bkg"
            android:textSize="@dimen/heading_2_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtProductGiftWrapQuantityStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_mini"
            android:layout_marginRight="@dimen/margin_small"
            android:gravity="center"
            android:textColor="@color/uiv3_dialog_header_text_bkg"
            android:textSize="@dimen/secondary_text_size" />

        <TextView
            android:id="@+id/txtIncreaseQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plusSymbol"
            android:textColor="@color/uiv3_dialog_header_text_bkg"
            android:textSize="@dimen/heading_1_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtProductGiftWrapTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutGiftOperations"
        android:layout_marginLeft="@dimen/margin_mini"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_toRightOf="@id/imgProduct"
        android:textColor="@color/uiv3_secondary_text_color"
        android:textSize="@dimen/secondary_text_size" />
</RelativeLayout>