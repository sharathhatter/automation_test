<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/layoutFilterSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:background="@color/uiv3_product_list_footer_bkg"
        android:baselineAligned="false"
        android:minHeight="@dimen/dimen_48"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutFilter"
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onFooterViewClicked"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:drawableLeft="@drawable/filter"
                android:drawablePadding="@dimen/padding_small"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:text="@string/filter"
                android:textColor="@color/uiv3_product_list_footer_txt_color"
                android:textSize="@dimen/primary_text_size" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutSort"
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onFooterViewClicked"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:drawableLeft="@drawable/sort"
                android:drawablePadding="@dimen/padding_small"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:text="@string/sort"
                android:textColor="@color/uiv3_product_list_footer_txt_color"
                android:textSize="@dimen/primary_text_size" />
        </LinearLayout>
    </LinearLayout>

</merge>