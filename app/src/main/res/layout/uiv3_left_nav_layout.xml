<?xml version="1.0" encoding="utf-8"?>
<com.bigbasket.mobileapp.view.ScrimInsetsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/left_drawer"
    style="@style/NavDrawer"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="@color/white"
    android:clickable="true"
    app:scrimInsetForeground="#4000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/uiv3_left_nav_header" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/lstMyAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:visibility="gone" />
    </LinearLayout>

    <com.bigbasket.mobileapp.view.uiv3.AnimatedRelativeLayout
        android:id="@+id/layoutSubNavigationItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listSubNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.bigbasket.mobileapp.view.uiv3.AnimatedRelativeLayout>
</com.bigbasket.mobileapp.view.ScrimInsetsFrameLayout>