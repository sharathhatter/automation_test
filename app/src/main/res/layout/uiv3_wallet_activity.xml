<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutCurrentPin"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:paddingRight="@dimen/padding_normal"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small">

        <TextView
            android:layout_width="wrap_content"
            android:background="@color/dark_green"
            android:textSize="@dimen/secondary_text_size"
            android:id="@+id/credited"
            android:paddingLeft="@dimen/padding_mini"
            android:paddingRight="@dimen/padding_mini"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:text="@string/credited"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="rs 1245"
            android:id="@+id/endingBalance"
            android:textSize="@dimen/primary_text_size"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/endingBalance"
            android:layout_alignParentRight="true"
            android:id="@+id/date"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/primary_text_size"
            android:text="35/23/43"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_below="@id/date"
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_marginLeft="@dimen/margin_small"
            android:id="@+id/separatorLine"
            android:background="@color/strokeLine"
            android:layout_height="0.2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/orderId"
            android:textColor="@color/uiv3_primary_text_color"
            android:layout_marginTop="@dimen/margin_small"
            android:textSize="@dimen/secondary_text_size"
            android:layout_marginLeft="@dimen/margin_normal"
            android:text="1234 534533 33 asd asdf asfda asdf asdfasd adfa asdfasd"
            android:layout_below="@+id/separatorLine"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/creditCreated"
            android:layout_below="@id/orderId"
            android:textSize="@dimen/secondary_text_size"
            android:textColor="@color/uiv3_primary_text_color"
            android:layout_marginLeft="@dimen/margin_normal"
            android:text="sadfasd asdfasdfa asdfa adsfasdff"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>