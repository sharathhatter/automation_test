<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uiv3_list_bkg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbarMain"
        layout="@layout/uiv3_tool_layout" />

    <include
        android:id="@+id/layoutFilterButtons"
        layout="@layout/uiv3_filter_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <View
        android:id="@+id/viewToolbarSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/toolbarMain"
        android:background="@color/uiv3_divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutFilterButtons"
        android:layout_below="@id/viewToolbarSeparator"
        android:layout_marginTop="@dimen/margin_small"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lstFilterName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp" />

        <LinearLayout
            android:id="@+id/layoutFilterItems"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:drawableLeft="@drawable/ic_search_grey600_24dp"
                android:drawablePadding="@dimen/padding_small"
                android:hint="@string/search"
                android:paddingBottom="@dimen/padding_normal"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingTop="@dimen/padding_normal"
                android:textColor="@color/uiv3_secondary_text_color"
                android:textSize="@dimen/primary_text_size" />

            <ListView
                android:id="@+id/lstFilterItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@color/white"
                android:divider="@null"
                android:dividerHeight="0dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>