<!--<?xml version="1.0" encoding="utf-8"?>-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutDoWallet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutWalletCurrentBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@color/uiv3_large_list_item_bck"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_normal"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingRight="@dimen/padding_normal"
                android:paddingTop="@dimen/padding_normal">


                <RelativeLayout
                    android:id="@+id/headerlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_account_balance_wallet_grey600_36dp"
                        android:contentDescription="@string/wallet_activity" />

                    <TextView
                        android:id="@+id/walletActivitySubHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_toRightOf="@id/wallet"
                        android:text="@string/walletSummary"
                        android:textColor="@color/uiv3_primary_text_color"
                        android:textSize="@dimen/large_text_size" />

                    <TextView
                        android:id="@+id/txtcurrentBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/walletActivitySubHeading"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/wallet"
                        android:text="@string/walletBalance"
                        android:textColor="@color/uiv3_primary_text_color"
                        android:textSize="@dimen/primary_text_size" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutLast3MonthLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@color/uiv3_large_list_item_bck"

                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_normal"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingRight="@dimen/padding_normal"
                android:paddingTop="@dimen/padding_small">

                <TextView
                    android:id="@+id/walletActivityFor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/walletActivityFor"
                    android:textColor="@color/red_color"
                    android:textSize="@dimen/primary_text_size" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:scrollbars="none">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/month3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical"
                            android:padding="@dimen/padding_mini"
                            android:text="March 2014"
                            android:textColor="@color/uiv3_primary_text_color"
                            android:textSize="@dimen/primary_text_size" />

                        <View
                            android:id="@+id/lineMonth3"
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginTop="2dp"
                            android:background="@color/strokeLine" />


                        <TextView
                            android:id="@+id/month2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical"
                            android:padding="@dimen/padding_mini"
                            android:text="March 2014"
                            android:textColor="@color/uiv3_primary_text_color"
                            android:textSize="@dimen/primary_text_size" />

                        <View
                            android:id="@+id/lineMonth2"
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginTop="2dp"
                            android:background="@color/strokeLine" />

                        <TextView
                            android:id="@+id/month1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical"
                            android:padding="@dimen/padding_mini"
                            android:text="March 2014"
                            android:textColor="@color/uiv3_primary_text_color"
                            android:textSize="@dimen/primary_text_size" />

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <Button
                style="@style/FormButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:onClick="onFundWalletBtnClicked"
                android:text="@string/fundWallet" />

            <LinearLayout
                android:id="@+id/layoutDeliveryToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@color/uiv3_large_list_item_bck"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_normal"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingRight="@dimen/padding_normal"
                android:paddingTop="@dimen/padding_normal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtTokenMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/uiv3_primary_text_color"
                    android:textSize="@dimen/primary_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@color/strokeLine" />

                <TextView
                    android:id="@+id/txtAvailableToken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textColor="@color/uiv3_primary_text_color"
                    android:textSize="@dimen/primary_text_size" />

            </LinearLayout>

            <TextView
                android:id="@+id/walletInfoMsg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="25dp"
                android:text="@string/walletInfoMsg1"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/secondary_text_size" />

            <TextView
                android:id="@+id/walletInfoMsg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_mini"
                android:text="@string/walletInfoMsg2"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/secondary_text_size" />

            <TextView
                android:id="@+id/walletInfoMsg3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_mini"
                android:text="@string/walletInfoMsg3"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/secondary_text_size" />

            <TextView
                android:id="@+id/txtVoucherTc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="25dp"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/secondary_text_size"
                android:textStyle="italic"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>