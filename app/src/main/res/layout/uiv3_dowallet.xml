<!--<?xml version="1.0" encoding="utf-8"?>-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/layoutDoWallet"
    android:background="@color/uiv3_list_bkg_color"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutWalletCurrentBalance"
                android:background="@color/white"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:paddingRight="@dimen/padding_normal"
                android:paddingLeft="@dimen/padding_normal"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_normal"
                android:paddingBottom="@dimen/padding_normal">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/headerlayout">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/wallet"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_account_balance_wallet_grey600_36dp" />

                    <TextView
                        android:id="@+id/walletActivitySubHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/wallet"
                        android:text="@string/walletSummary"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:textSize="@dimen/large_text_size" />

                    <TextView
                        android:id="@+id/txtcurrentBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/walletActivitySubHeading"
                        android:layout_toRightOf="@id/wallet"
                        android:layout_marginLeft="16dp"
                        android:text="@string/walletBalance"
                        android:textSize="@dimen/primary_text_size" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutLast3MonthLayout"
                android:background="@color/white"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:paddingRight="@dimen/padding_normal"
                android:paddingLeft="@dimen/padding_normal"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_normal">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/walletActivityFor"
                    android:text="@string/walletActivityFor"
                    android:textSize="@dimen/primary_text_size"
                    android:textColor="@color/link_color"
                    android:layout_height="wrap_content" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:scrollbars="none"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/month3"
                            android:gravity="center_vertical"
                            android:padding="@dimen/padding_mini"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/dark_grey"
                            android:text="March 2014"
                            android:textSize="@dimen/primary_text_size" />

                        <View
                            android:layout_width="1dp"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginTop="2dp"
                            android:id="@+id/lineMonth3"
                            android:background="@color/strokeLine"
                            android:layout_gravity="center_vertical"
                            android:layout_height="30dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/month2"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:padding="@dimen/padding_mini"
                            android:gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/dark_grey"
                            android:layout_gravity="center_vertical"
                            android:text="March 2014"
                            android:textSize="@dimen/primary_text_size" />

                        <View
                            android:layout_width="1dp"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:background="@color/strokeLine"
                            android:id="@+id/lineMonth2"
                            android:layout_height="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/month1"
                            android:gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:padding="@dimen/padding_mini"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:textColor="@color/dark_grey"
                            android:text="March 2014"
                            android:textSize="@dimen/primary_text_size" />

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:id="@+id/walletInfoMsg1"
                android:paddingLeft="25dp"
                android:textSize="@dimen/primary_text_size"
                android:paddingRight="25dp"
                android:text="@string/walletInfoMsg1"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>