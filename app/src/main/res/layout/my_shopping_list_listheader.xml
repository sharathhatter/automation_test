<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/heading">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">



        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/strokeLine"
              android:layout_alignParentTop="true"
                />

        <TextView
                android:id="@+id/brandNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                />

        <Button android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                style="@style/Uiv2ShoppingPopBtn"
                android:id="@+id/btnAddAllToBasket"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/grey_button_shopping_list"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/basket_inline_icon"
                android:text="@string/addAll"/>


        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/strokeLine"
              android:layout_below="@id/btnAddAllToBasket"
                />

    </RelativeLayout>
</RelativeLayout>