<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chkIsSlotSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:clickable="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/txtFulfillmentDisplayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:layout_toLeftOf="@id/chkIsSlotSelected"
                android:textColor="@color/uiv3_list_primary_text_color"
                android:textSize="@dimen/primary_text_size" />

            <TextView
                android:id="@+id/txtFulfilledBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtFulfillmentDisplayName"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_toLeftOf="@id/chkIsSlotSelected"
                android:textColor="@color/uiv3_list_secondary_text_color"
                android:textSize="@dimen/secondary_text_size" />

            <TextView
                android:id="@+id/txtSlotSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtFulfilledBy"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_toLeftOf="@id/chkIsSlotSelected"
                android:textColor="@color/dark_green"
                android:textSize="@dimen/primary_text_size" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>