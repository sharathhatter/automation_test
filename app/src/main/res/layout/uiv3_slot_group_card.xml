<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:id="@+id/chkIsSlotSelected"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/uiv3_list_primary_text_color"
            android:textSize="@dimen/primary_text_size"
            android:id="@+id/txtFulfillmentDisplayName"
            android:layout_toLeftOf="@id/chkIsSlotSelected"
            android:layout_margin="@dimen/margin_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtFulfilledBy"
            android:layout_below="@id/txtFulfillmentDisplayName"
            android:textColor="@color/uiv3_list_secondary_text_color"
            android:textSize="@dimen/secondary_text_size"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_toLeftOf="@id/chkIsSlotSelected"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtSlotSelected"
            android:textSize="@dimen/primary_text_size"
            android:textColor="@color/dark_green"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_below="@id/txtFulfilledBy"
            android:layout_toLeftOf="@id/chkIsSlotSelected"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>