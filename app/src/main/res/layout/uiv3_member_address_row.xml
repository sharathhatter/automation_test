<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small">

        <CheckBox
            android:id="@+id/chkIsAddrSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_mini"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/defaultAddress"
            android:textColor="@color/uiv3_primary_text_color" />

        <TextView
            android:id="@+id/txtMemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/chkIsAddrSelected"
            android:layout_marginRight="@dimen/margin_mini"
            android:layout_marginTop="@dimen/margin_mini"
            android:singleLine="false"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/primary_text_size" />

        <TextView
            android:id="@+id/txtMemberAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtMemberName"
            android:layout_marginRight="@dimen/margin_mini"
            android:layout_marginTop="@dimen/margin_small"
            android:singleLine="false"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <TextView
            android:id="@+id/txtMemberContactNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtMemberAddress"
            android:layout_marginBottom="@dimen/margin_mini"
            android:layout_marginRight="@dimen/margin_mini"
            android:layout_marginTop="@dimen/margin_small"
            android:drawableLeft="@drawable/ic_call_grey600_18dp"
            android:drawablePadding="@dimen/padding_mini"
            android:singleLine="false"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

    </RelativeLayout>
</android.support.v7.widget.CardView>