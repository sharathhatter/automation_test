<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:paddingBottom="@dimen/margin_normal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/thank_you_page_top_margin"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bb_logo_transparent_bkg" />

        <TextView
            android:id="@+id/txtThankYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/thank_you_page_txt_margin"
            android:text="@string/thankYouHeader"
            android:textColor="@color/red_color"
            android:textSize="@dimen/thank_you_page_heading_text_size" />

        <TextView
            android:id="@+id/txtOrderPlaced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/thank_you_order_placed"
            android:text="@string/payNowThankyou"
            android:textColor="@color/red_color"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/txtOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/padding_normal"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <Button
            android:id="@+id/btn_login"
            style="@style/FormButtonStyle"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:background="@drawable/red_rounded_btn_bkg"
            android:clickable="true"
            android:onClick="onContinueBtnClicked"
            android:text="@string/continue_shopping"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size" />

    </LinearLayout>
</ScrollView>