<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_keyboard_arrow_right_grey600_24dp"
            android:text="@string/spendTrendsEmptyPt1"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/primary_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:drawableLeft="@drawable/ic_keyboard_arrow_right_grey600_24dp"
            android:text="@string/spendTrendsEmptyPt2"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/primary_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:drawableLeft="@drawable/ic_keyboard_arrow_right_grey600_24dp"
            android:text="@string/spendTrendsEmptyPt3"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/primary_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:drawableLeft="@drawable/ic_keyboard_arrow_right_grey600_24dp"
            android:text="@string/spendTrendsEmptyPt4"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/primary_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/spendTrendsEmpty1"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/spendTrendsEmpty2"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/large_text_size" />

    </LinearLayout>
</ScrollView>