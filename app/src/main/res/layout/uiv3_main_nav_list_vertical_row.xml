<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgNavItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/alt_placeholder" />

    <TextView
        android:id="@+id/txtNavMainItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_arrow_back_white_24dp"
        android:drawablePadding="@dimen/padding_small"
        android:gravity="left|center_vertical"
        android:paddingBottom="@dimen/padding_normal"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_normal"
        android:textColor="@color/white"
        android:textSize="@dimen/primary_text_size" />

    <TextView
        android:id="@+id/txtNavListRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgNavItem"
        android:background="#66000000"
        android:padding="@dimen/padding_normal"
        android:textColor="@color/white"
        android:textSize="@dimen/secondary_text_size" />

</RelativeLayout>