<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_normal">

    <TextView
        android:id="@+id/txtSnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_mini"
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/large_text_size" />

    <TextView
        android:id="@+id/txtProductBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_toRightOf="@id/txtSnum"
        android:textColor="@color/uiv3_secondary_text_color"
        android:textSize="@dimen/primary_text_size" />

    <LinearLayout
        android:id="@+id/layoutGiftItemDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtProductBrand"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_toRightOf="@id/txtSnum"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtProductDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <TextView
            android:id="@+id/txtQty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />
    </LinearLayout>

    <include
        layout="@layout/uiv3_gift_item_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutGiftItemDesc"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_toRightOf="@id/txtSnum" />
</RelativeLayout>