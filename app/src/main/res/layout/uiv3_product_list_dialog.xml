<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/uiv3LayoutListContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uiv3_list_bkg_color">

    <LinearLayout
        android:id="@+id/layoutProductDialogButtons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_btn_layout_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_btn_height"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_mini"
            android:paddingRight="@dimen/padding_mini"
            android:text="@string/CANCEL"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/primary_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtViewAllProducts"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_btn_height"
            android:layout_marginLeft="@dimen/padding_normal"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_mini"
            android:paddingRight="@dimen/padding_mini"
            android:text="@string/viewAllProducts"
            android:textColor="@color/uiv3_accept_label_color"
            android:textSize="@dimen/primary_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutProductDialogButtons" />
</RelativeLayout>