<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/layoutUpdateProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/uiv3_list_bkg_light_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_normal"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/email"
                        android:src="@drawable/mail"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        >

                        <EditText
                            android:id="@+id/editTextEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textSize="@dimen/secondary_text_size"
                            android:ems="10"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:textColor="@color/uiv3_primary_text_color"/>

                        <ImageView
                            android:id="@+id/imgEmailErr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/editTextEmail"
                            android:visibility="gone"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:contentDescription="@string/missing"
                            android:src="@drawable/error_symbol"/>

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/firstName"
                        android:src="@drawable/person"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        >

                        <EditText
                            android:id="@+id/editTextFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/firstName"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textSize="@dimen/secondary_text_size"
                            android:ems="10"
                            android:inputType="textVisiblePassword"
                            android:singleLine="true"
                            android:maxLength="30"
                            android:textColor="@color/uiv3_primary_text_color"/>

                        <ImageView
                            android:id="@+id/imgFirstNameErr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/editTextFirstName"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/missing"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:src="@drawable/error_symbol"/>

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/lastName"
                        android:src="@drawable/person"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        >

                        <EditText
                            android:id="@+id/editTextLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/lastName"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textSize="@dimen/secondary_text_size"
                            android:ems="10"
                            android:inputType="textVisiblePassword"
                            android:singleLine="true"
                            android:maxLength="30"
                            android:textColor="@color/uiv3_primary_text_color"/>

                        <ImageView
                            android:id="@+id/imgLastNameErr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/editTextLastName"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/missing"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:src="@drawable/error_symbol"/>

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/dob"
                        android:src="@drawable/create"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        >

                        <EditText
                            android:id="@+id/editTextDob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/dob"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textSize="@dimen/secondary_text_size"
                            android:ems="10"
                            android:singleLine="true"
                            android:maxLength="30"
                            android:textColor="@color/uiv3_primary_text_color"/>

                        <ImageView
                            android:id="@+id/imgCalc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/editTextDob"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/calender"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/calander"/>

                    </RelativeLayout>
                    <!-- todo change image -->

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/mobileNumber"
                        android:src="@drawable/call"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        >

                        <EditText
                            android:id="@+id/editTextMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/mobileNumber"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textSize="@dimen/secondary_text_size"
                            android:ems="10"
                            android:inputType="numberSigned"
                            android:singleLine="true"
                            android:maxLength="10"
                            android:textColor="@color/uiv3_primary_text_color"/>

                        <ImageView
                            android:id="@+id/imgMobileNumberErr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/editTextMobileNumber"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/missing"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:src="@drawable/error_symbol"/>

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/telNumber"
                        android:src="@drawable/call"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        >

                        <EditText
                            android:id="@+id/editTextTelNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/telNumber"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textSize="@dimen/secondary_text_size"
                            android:ems="10"
                            android:inputType="numberSigned"
                            android:singleLine="true"
                            android:textColor="@color/uiv3_primary_text_color"/>

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/HNDetails"
                        android:src="@drawable/call"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        >

                        <EditText
                            android:id="@+id/editTextHouseAndDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/HNDetails"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textSize="@dimen/secondary_text_size"
                            android:ems="10"
                            android:singleLine="true"
                            android:textColor="@color/uiv3_primary_text_color"/>

                        <ImageView
                            android:id="@+id/imgHouseAndDetailsErr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/editTextHouseAndDetails"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/missing"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:src="@drawable/error_symbol"/>

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/streetDetails"
                        android:src="@drawable/call"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        >

                        <EditText
                            android:id="@+id/editTextStreetDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/streetDetails"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textSize="@dimen/secondary_text_size"
                            android:ems="10"
                            android:singleLine="true"
                            android:textColor="@color/uiv3_primary_text_color"/>

                    </RelativeLayout>
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/area"
                        android:src="@drawable/call"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        >

                        <AutoCompleteTextView
                            android:id="@+id/editTextArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/area"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textSize="@dimen/secondary_text_size"
                            android:ems="10"
                            android:singleLine="true"
                            android:textColor="@color/uiv3_primary_text_color"/>

                        <ImageView
                            android:id="@+id/imgAreaErr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/editTextArea"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="@dimen/margin_small"
                            android:visibility="gone"
                            android:contentDescription="@string/missing"
                            android:src="@drawable/error_symbol"/>


                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/resAndComplex"
                        android:src="@drawable/call"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        >

                        <EditText
                            android:id="@+id/editTextResAndComplex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/resAndComplex"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textSize="@dimen/secondary_text_size"
                            android:ems="10"
                            android:singleLine="true"
                            android:textColor="@color/uiv3_primary_text_color"/>

                    </RelativeLayout>
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/landmark"
                        android:src="@drawable/call"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        >

                        <EditText
                            android:id="@+id/editTextLandmark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/landmark"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textSize="@dimen/secondary_text_size"
                            android:ems="10"
                            android:singleLine="true"
                            android:textColor="@color/uiv3_primary_text_color"/>

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/city"
                        android:src="@drawable/place"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        >

                        <EditText
                            android:id="@+id/editTextCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text"
                            android:hint="@string/city"
                            android:focusableInTouchMode="false"
                            android:imeOptions="actionNext"
                            android:enabled="false"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textSize="@dimen/secondary_text_size"
                            android:singleLine="true"
                            android:textColor="@color/uiv3_primary_text_color"/>

                        <ImageView
                            android:id="@+id/imgCityErr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/editTextCity"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="@dimen/margin_small"
                            android:visibility="gone"
                            android:contentDescription="@string/missing"
                            android:src="@drawable/error_symbol"/>


                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/pinCode"
                        android:src="@drawable/place"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        >

                        <EditText
                            android:id="@+id/editTextPinCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:textSize="@dimen/secondary_text_size"
                            android:ems="10"
                            android:inputType="text"
                            android:hint="@string/pinCode"
                            android:focusableInTouchMode="false"
                            android:imeOptions="actionNext"
                            android:enabled="false"
                            android:singleLine="true"
                            android:textColor="@color/uiv3_primary_text_color"/>

                        <ImageView
                            android:id="@+id/imgPinCodeErr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/editTextPinCode"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="@dimen/margin_small"
                            android:visibility="gone"
                            android:contentDescription="@string/missing"
                            android:src="@drawable/error_symbol"/>


                    </RelativeLayout>
                </TableRow>
            </TableLayout>

            <CheckBox
                android:id="@+id/chkReceivePromos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/receivePromos"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/secondary_text_size"
                android:checked="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal">

                <Button
                    android:id="@+id/btnUpdateProfile"
                    android:layout_width="match_parent"
                    style="@style/Uiv3BigGreenButton"
                    android:layout_height="wrap_content"
                    android:text="@string/UPDATE"
                    />

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/progressBarUpdateProfile"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
