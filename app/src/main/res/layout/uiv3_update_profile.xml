<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutUpdateProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/uiv3_list_bkg_light_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/email"
                        android:src="@drawable/ic_mail_grey600_24dp" />

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_small"
                        android:ems="10"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/uiv3_primary_text_color"
                        android:textSize="@dimen/secondary_text_size" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/firstName"
                        android:src="@drawable/ic_person_grey600_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextFirstName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_mini"
                            android:layout_weight="1"
                            android:hint="@string/firstName"
                            android:inputType="textVisiblePassword"
                            android:maxLength="30"
                            android:singleLine="true"
                            android:textColor="@color/uiv3_primary_text_color"
                            android:textSize="@dimen/secondary_text_size" />

                        <EditText
                            android:id="@+id/editTextLastName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_mini"
                            android:layout_weight="1"
                            android:hint="@string/lastName"
                            android:inputType="textVisiblePassword"
                            android:maxLength="30"
                            android:singleLine="true"
                            android:textColor="@color/uiv3_primary_text_color"
                            android:textSize="@dimen/secondary_text_size" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/dob"
                        android:src="@drawable/ic_mode_edit_grey600_24dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/editTextDob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:ems="10"
                            android:hint="@string/dob"
                            android:maxLength="30"
                            android:singleLine="true"
                            android:textColor="@color/uiv3_primary_text_color"
                            android:textSize="@dimen/secondary_text_size" />

                        <ImageView
                            android:id="@+id/imgCalc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/editTextDob"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:contentDescription="@string/calender"
                            android:src="@drawable/ic_today_grey600_24dp" />

                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/mobileNumber"
                        android:src="@drawable/ic_call_grey600_24dp" />

                    <EditText
                        android:id="@+id/editTextMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:ems="10"
                        android:hint="@string/mobileNumber"
                        android:inputType="numberSigned"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="@color/uiv3_primary_text_color"
                        android:textSize="@dimen/secondary_text_size" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/telNumber"
                        android:src="@drawable/ic_call_grey600_24dp" />

                    <EditText
                        android:id="@+id/editTextTelNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:ems="10"
                        android:hint="@string/telNumber"
                        android:inputType="numberSigned"
                        android:singleLine="true"
                        android:textColor="@color/uiv3_primary_text_color"
                        android:textSize="@dimen/secondary_text_size" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:contentDescription="@string/HNDetails"
                        android:src="@drawable/ic_place_grey600_24dp" />

                    <EditText
                        android:id="@+id/editTextHouseAndDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:ems="10"
                        android:hint="@string/HNDetails"
                        android:singleLine="true"
                        android:textColor="@color/uiv3_primary_text_color"
                        android:textSize="@dimen/secondary_text_size" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">


                    <EditText
                        android:id="@+id/editTextStreetDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:ems="10"
                        android:hint="@string/streetDetails"
                        android:singleLine="true"
                        android:textColor="@color/uiv3_primary_text_color"
                        android:textSize="@dimen/secondary_text_size" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <AutoCompleteTextView
                        android:id="@+id/editTextArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:ems="10"
                        android:hint="@string/area"
                        android:singleLine="true"
                        android:textColor="@color/uiv3_primary_text_color"
                        android:textSize="@dimen/secondary_text_size" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <EditText
                        android:id="@+id/editTextResAndComplex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:ems="10"
                        android:hint="@string/resAndComplex"
                        android:singleLine="true"
                        android:textColor="@color/uiv3_primary_text_color"
                        android:textSize="@dimen/secondary_text_size" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <EditText
                        android:id="@+id/editTextLandmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:ems="10"
                        android:hint="@string/landmark"
                        android:singleLine="true"
                        android:textColor="@color/uiv3_primary_text_color"
                        android:textSize="@dimen/secondary_text_size" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <EditText
                        android:id="@+id/editTextCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:ems="10"
                        android:enabled="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/city"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/uiv3_primary_text_color"
                        android:textSize="@dimen/secondary_text_size" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <EditText
                        android:id="@+id/editTextPinCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:ems="10"
                        android:enabled="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/pinCode"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/uiv3_primary_text_color"
                        android:textSize="@dimen/secondary_text_size" />
                </TableRow>
            </TableLayout>

            <CheckBox
                android:id="@+id/chkReceivePromos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:checked="true"
                android:text="@string/receivePromos"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/secondary_text_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal">

                <Button
                    android:id="@+id/btnUpdateProfile"
                    style="@style/Uiv3BigGreenButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/UPDATE" />

                <ProgressBar
                    android:id="@+id/progressBarUpdateProfile"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
