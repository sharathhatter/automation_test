<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/uiv3_action_bar_background"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_normal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:contentDescription="@string/store_img"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_gravity="center"
            android:src="@drawable/white_store_icon" />

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:textColor="@color/white"
            android:textSize="@dimen/primary_text_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/storeIcon"
        android:contentDescription="@string/store_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_below="@+id/linearLayout"/>

    <TextView
        android:id="@+id/txtStoreDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storeIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_normal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/uiv3_secondary_text_color" />


</RelativeLayout>