<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutName"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_height="wrap_content">

            <com.bigbasket.mobileapp.view.uiv3.ImageViewCircular
                android:layout_width="wrap_content"
                android:id="@+id/circularImageView"
                android:maxWidth="65dp"
                android:layout_centerVertical="true"
                android:maxHeight="65dp"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="85dp"
                android:orientation="vertical"
                android:id="@+id/layoutEmailId"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtMemberName"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/uiv3_primary_text_color"
                    android:textSize="@dimen/large_text_size" />

                <TextView
                    android:id="@+id/txtEmailId"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/text_color_myaccount"
                    android:textSize="@dimen/primary_text_size"
                    android:textStyle="italic"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line1"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:layout_below="@id/layoutEmailId"
                android:background="@color/separator_line_color"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layoutPhoneNumber"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_height="wrap_content">


            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPhoneLabel"
                android:layout_marginLeft="@dimen/margin_large"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/uiv3_secondary_text_color"
                android:text="@string/phone"/>

            <ImageView
                android:id="@+id/imgPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_below="@id/txtPhoneLabel"
                android:layout_marginLeft="@dimen/margin_xlarge_account"
                android:src="@drawable/phone_icon"/>

            <TextView
                android:id="@+id/txtPhone"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_below="@id/txtPhoneLabel"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/uiv3_primary_text_color"
                android:layout_toRightOf="@+id/imgPhone"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line2"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_below="@id/txtPhone"
                android:background="@color/separator_line_color"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layoutBirthday"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtBirthdayLabel"
                android:layout_marginLeft="@dimen/margin_large"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/uiv3_secondary_text_color"
                android:text="@string/birthday"/>

            <ImageView
                android:id="@+id/imgBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_below="@id/txtBirthdayLabel"
                android:layout_marginLeft="@dimen/margin_xlarge_account"
                android:src="@drawable/cake"/>

            <TextView
                android:id="@+id/txtBirthday"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_below="@id/txtBirthdayLabel"
                android:layout_toRightOf="@id/imgBirthday"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/uiv3_primary_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line3"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_below="@id/txtBirthday"
                android:background="@color/separator_line_color"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layoutAddress"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/padding_small"
            android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtAddressLabel"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_large"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/uiv3_secondary_text_color"
                android:text="@string/address"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtViewAll"
                android:text="@string/addAddress"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/small_add"
                android:paddingTop="@dimen/margin_mini"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:clickable="true"
                android:onClick="renderAddressActivity"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/text_color_myaccount"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/imgAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_below="@id/txtAddressLabel"
                android:layout_marginLeft="@dimen/margin_xlarge_account"
                android:src="@drawable/address"/>

            <TextView
                android:id="@+id/txtAddress"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_below="@id/txtAddressLabel"
                android:layout_toLeftOf="@id/txtViewAll"
                android:layout_toRightOf="@id/imgAddress"
                android:layout_width="wrap_content"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/uiv3_primary_text_color"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layoutEmptyAddress"
            android:visibility="gone"
            android:paddingBottom="@dimen/padding_small"
            android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtEmptyAddressLabel"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_large"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/uiv3_secondary_text_color"
                android:text="@string/address"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtAddAddress"
                android:text="@string/addAddress"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/small_add"
                android:paddingTop="@dimen/margin_mini"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:clickable="true"
                android:onClick="renderAddressActivity"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/text_color_myaccount"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imgEmptyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_below="@id/txtAddAddress"
                android:layout_marginLeft="@dimen/margin_xlarge_account"
                android:src="@drawable/address"/>


            <TextView
                android:id="@+id/txtAddressEmptyTxt"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_below="@id/txtEmptyAddressLabel"
                android:layout_toLeftOf="@id/txtAddAddress"
                android:text="@string/myAddressEmptyText"
                android:layout_toRightOf="@id/txtEmptyAddressLabel"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:textSize="@dimen/primary_text_size"
                android:textColor="@color/uiv3_primary_text_color"
                android:layout_height="wrap_content" />



        </RelativeLayout>

</LinearLayout>
