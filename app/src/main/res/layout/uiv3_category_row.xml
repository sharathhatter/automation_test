<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerOuterLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:paddingTop="@dimen/padding_mini">

    <TextView
        android:id="@+id/topCatTotal"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_alignParentRight="true"
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/primary_text_size"
        android:visibility="visible" />

    <TextView
        android:id="@+id/topCatTotalItems"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toLeftOf="@id/topCatTotal"
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/primary_text_size"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtTopCategory"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_mini"
        android:paddingTop="@dimen/margin_mini"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/topCatTotalItems"
        android:gravity="center_vertical"
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/primary_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/txtTopCategory"
        android:background="@color/uiv3_divider_color" />

</RelativeLayout>