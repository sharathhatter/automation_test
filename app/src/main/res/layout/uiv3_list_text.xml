<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/uiv3_list_bkg_light_color"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/listArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_normal"
        android:contentDescription="@string/more"
        android:src="@drawable/ic_keyboard_arrow_right_grey600_24dp" />

    <TextView
        android:id="@+id/txtListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/listArrow"
        android:padding="@dimen/padding_normal"
        android:textColor="@color/uiv3_list_primary_text_color"
        android:textSize="@dimen/primary_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/txtListText"
        android:background="@color/uiv3_list_separator_color"
        android:visibility="gone"
        android:id="@+id/viewSeparator"/>
</RelativeLayout>