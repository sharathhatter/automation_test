<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layoutPromoInfoBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_mini"
        android:layout_marginBottom="@dimen/margin_mini"
        android:textSize="@dimen/secondary_text_size"
        android:text="Buy 2 get One free"
        android:id="@+id/txtPromoInfoMsg"
        android:textColor="@color/uiv3_primary_text_color"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutCriteriaMsg"
        android:layout_below="@id/txtPromoInfoMsg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutPromoSavingInfo"
        android:layout_below="@id/layoutCriteriaMsg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_mini"
            android:layout_marginRight="@dimen/margin_mini"
            android:textColor="@color/promo_txt_green_color"
            android:textSize="@dimen/secondary_text_size"
            android:text="testing"
            android:id="@+id/txtNumCompletedOffer" />

        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/promo_txt_green_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_mini"
            android:layout_marginRight="@dimen/margin_mini"
            android:textColor="@color/promo_txt_green_color"
            android:textSize="@dimen/secondary_text_size"
            android:text="testing"
            android:id="@+id/txtSaving" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/strokeLine"
        android:layout_marginTop="@dimen/margin_small"
        android:id="@+id/line"
        android:layout_below="@id/layoutPromoSavingInfo" />

</RelativeLayout>