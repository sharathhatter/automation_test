<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/padding_mini"
    android:paddingBottom="@dimen/padding_mini"
    android:minWidth="@dimen/min_width_product_drop_down"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/txtProductPkgDesc"
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/primary_text_size"
        android:paddingBottom="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small" />

    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_mini"
        android:paddingTop="@dimen/padding_small"
        android:id="@+id/txtProductSellPrice"
        android:gravity="left"
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/primary_text_size"
        android:paddingRight="@dimen/padding_small" />
</LinearLayout>