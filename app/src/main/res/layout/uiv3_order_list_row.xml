<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imgOrderType"
        android:layout_marginTop="@dimen/margin_22"
        android:layout_marginLeft="@dimen/margin_small"
        android:src="@drawable/active_order"
        android:scaleType="centerInside"/>

    <LinearLayout
        android:id="@+id/layoutOrderData"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/imgOrderType"
        android:layout_marginTop="@dimen/margin_normal"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:paddingRight="@dimen/padding_normal"
        android:paddingLeft="@dimen/padding_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tue 30 Sep 2014"
            android:textSize="@dimen/primary_text_size"
            android:id="@+id/txtSlotDate"
            android:textColor="@color/uiv3_primary_text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:30 PM to 10:00PM"
            android:textSize="@dimen/secondary_text_size"
            android:id="@+id/txtSlotTime"
            android:textColor="@color/uiv3_primary_text_color" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="ID : BBO-130440-240914"
            android:textSize="@dimen/secondary_text_size"
            android:id="@+id/txtOrderId"
            android:textColor="@color/uiv3_primary_text_color" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Items"
            android:textSize="@dimen/secondary_text_size"
            android:id="@+id/txtNumItems"
            android:textColor="@color/uiv3_secondary_text_color" />
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:layout_alignBottom="@id/layoutOrderData"
            android:layout_marginRight="@dimen/margin_normal"
            android:paddingRight="@dimen/padding_normal"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/padding_small"
            android:textSize="@dimen/secondary_text_size"
            android:id="@+id/txtOrderStatus"
            android:textStyle="italic"
            android:textColor="@color/uiv3_primary_text_color" />
</RelativeLayout>