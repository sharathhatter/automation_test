<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_normal"
    android:scrollbars="none"
    android:background="@color/uiv3_large_list_item_bck"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextAddressNick"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/padding_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:hint="@string/addressNick"
            android:inputType="textPersonName"
            android:textColorHint="@color/uiv3_secondary_text_color"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/editTextAddressNick"
            android:layout_marginLeft="@dimen/margin_normal"
            android:id="@+id/layoutName"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="0dp"
                android:layout_below="@id/editTextAddressNick"
                android:layout_height="wrap_content"
                android:textColorHint="@color/uiv3_secondary_text_color"
                android:layout_weight="1"
                android:hint="@string/firstName"
                android:paddingLeft="@dimen/padding_small"
                android:inputType="textPersonName"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/secondary_text_size" />

            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="0dp"
                android:textColorHint="@color/uiv3_secondary_text_color"
                android:layout_below="@id/editTextFirstName"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_small"
                android:hint="@string/lastName"
                android:inputType="textPersonName"
                android:textColor="@color/uiv3_primary_text_color"
                android:textSize="@dimen/secondary_text_size" />

        </LinearLayout>


        <EditText
            android:id="@+id/editTextMobileNumber"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_below="@id/layoutName"
            android:layout_height="wrap_content"
            android:textColorHint="@color/uiv3_secondary_text_color"
            android:paddingLeft="@dimen/padding_small"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:ems="10"
            android:hint="@string/mobileNumber"
            android:inputType="numberSigned"
            android:maxLength="10"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <EditText
            android:id="@+id/editTextHouseNum"
            android:layout_below="@id/editTextMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/uiv3_secondary_text_color"
            android:paddingLeft="@dimen/padding_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:ems="10"
            android:hint="@string/houseNum"
            android:inputType="textPostalAddress"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />


        <EditText
            android:id="@+id/editTextStreetName"
            android:layout_width="match_parent"
            android:layout_below="@id/editTextHouseNum"
            android:layout_height="wrap_content"
            android:textColorHint="@color/uiv3_secondary_text_color"
            android:paddingLeft="@dimen/padding_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:ems="10"
            android:hint="@string/streetName"
            android:inputType="textPostalAddress"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />


        <EditText
            android:id="@+id/editTextResidentialComplex"
            android:layout_below="@id/editTextStreetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/uiv3_secondary_text_color"
            android:paddingLeft="@dimen/padding_small"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:ems="10"
            android:hint="@string/residentialComplex"
            android:inputType="textPostalAddress"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <EditText
            android:id="@+id/editTextLandmark"
            android:layout_below="@id/editTextResidentialComplex"
            android:textColorHint="@color/uiv3_secondary_text_color"
            android:paddingLeft="@dimen/padding_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:ems="10"
            android:hint="@string/landmark"
            android:inputType="textPostalAddress"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <AutoCompleteTextView
            android:id="@+id/editTextPincode"
            android:layout_below="@id/editTextLandmark"
            android:textColorHint="@color/uiv3_secondary_text_color"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/padding_small"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:maxLength="6"
            android:ems="10"
            android:hint="@string/pincode"
            android:inputType="numberSigned"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <com.bigbasket.mobileapp.view.InstantAutoComplete
            android:id="@+id/editTextArea"
            android:layout_below="@id/editTextPincode"
            android:paddingLeft="@dimen/padding_small"
            android:textColorHint="@color/uiv3_secondary_text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:ems="10"
            android:hint="@string/area"
            android:inputType="textPostalAddress"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />

        <EditText
            android:id="@+id/editTextCity"
            style="@style/ReadOnlyEditText"
            android:layout_below="@id/editTextArea"
            android:textColorHint="@color/uiv3_secondary_text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_small"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:hint="@string/city"
            android:inputType="none"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size" />


        <CheckBox
            android:id="@+id/chkIsAddrDefault"
            android:layout_below="@id/editTextCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/makeDefaultAddress"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/txtSaveAddress"
            android:layout_below="@id/chkIsAddrDefault"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_mini"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingBottom="@dimen/padding_normal"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textColor="@color/red_color"
            android:textSize="@dimen/primary_text_size" />

    </RelativeLayout>
</ScrollView>