<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<ScrollView
            android:layout_width="match_parent"
            android:id="@+id/layoutReferralScrollView"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/padding_large"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtHeadingBenefitToYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:textColor="@color/uiv3_primary_text_color"
            android:text="@string/benefitToYou"
            android:textSize="@dimen/primary_text_size" />


        <android.support.v7.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:contentPaddingBottom="@dimen/padding_small"
            app:contentPaddingLeft="@dimen/padding_small"
            app:contentPaddingRight="@dimen/padding_small"
            android:id="@+id/layoutBenefitsToYou"
            android:layout_below="@id/txtHeadingBenefitToYou"
            app:contentPaddingTop="@dimen/padding_mini">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/txtPara1"
                    android:text="fsadsadf asdfasdfasdfasdf asdfasdf asdfasdfasdf asddfasdf"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/txtPara2"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_below="@id/txtPara1"
                    android:text="@string/spreadJoy"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/txtPara3"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_below="@id/txtPara2"
                    android:text="@string/howItWorks"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/txtPara4"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_below="@id/txtPara3"
                    android:text="@string/HowItWorksStr"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/txtPara5"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_below="@id/txtPara4"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/txtPara6"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_below="@id/txtPara5"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/txtPara7"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_below="@id/txtPara6"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/txtHeadingBenefitToYourFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:textColor="@color/uiv3_primary_text_color"
            android:text="@string/benefitToYourFriend"
            android:layout_below="@id/layoutBenefitsToYou"
            android:textSize="@dimen/primary_text_size" />

        <android.support.v7.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:contentPaddingBottom="@dimen/padding_small"
            app:contentPaddingLeft="@dimen/padding_small"
            app:contentPaddingRight="@dimen/padding_small"
            android:id="@+id/layoutToYourFriend"
            android:layout_below="@id/txtHeadingBenefitToYourFriend"
            app:contentPaddingTop="@dimen/padding_mini">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/txtFreeProduct"
                android:text="@string/freeProductRef"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/imgFreeProduct"
                android:layout_gravity="center"
                android:src="@drawable/banner"
                android:layout_below="@id/txtFreeProduct"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/link_color"
                android:id="@+id/txtProductDesc"/>

            <TextView
                 android:layout_width="match_parent"
                 android:textSize="@dimen/small_text_size"
                 android:layout_below="@+id/txtFreeProduct"
                 android:text="@string/tcForFreeProduct"
                 android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_normal"
            android:id="@+id/layoutTC"
            android:layout_below="@id/layoutToYourFriend"
            >
            
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txtTC"
            android:textSize="@dimen/secondary_text_size"
            android:text="@string/referralTC"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/txtTC"
            android:id="@+id/layoutInnerTC"
            android:layout_height="wrap_content">

        </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/FooterButtonStyle"
    android:id="@+id/btnRefFriend"
    android:text="@string/inviteFriend"
    android:onClick="onRefFriendClick"
    android:layout_margin="0dp"
    android:layout_alignParentBottom="true" />

</RelativeLayout>