<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/layoutReferralScrollView"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeLayout"
        android:paddingBottom="@dimen/padding_mini"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:contentPaddingBottom="@dimen/padding_small"
        app:contentPaddingLeft="@dimen/padding_small"
        app:contentPaddingRight="@dimen/padding_small"
        android:id="@+id/layoutBenefitsToYou"
        app:contentPaddingTop="@dimen/padding_mini">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txtRefClientMsg"
            android:text="asdad sdafasd"
            android:textColor="@color/uiv3_primary_text_color"
            android:textSize="@dimen/secondary_text_size"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txtTermAndConditionLink"
            android:textStyle="italic"
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_marginRight="@dimen/margin_small"
            android:textSize="@dimen/secondary_text_size"
            android:textColor="@color/link_color"
            android:layout_below="@id/txtRefClientMsg"
            android:layout_height="wrap_content" />

        </RelativeLayout>

        </android.support.v7.widget.CardView>



        <TextView
            android:id="@+id/txtHeadingBenefitToYourFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:textColor="@color/uiv3_primary_text_color"
            android:text="@string/inviteFriend"
            android:layout_below="@id/layoutBenefitsToYou"
            android:textSize="@dimen/large_text_size" />



    </RelativeLayout>
        <GridView
            android:layout_width="match_parent"
            android:id="@+id/layoutGridView"
            android:gravity="center"
            android:numColumns="3"
            android:layout_below="@id/relativeLayout"
            android:layout_height="wrap_content">

        </GridView>

    </ScrollView>
</RelativeLayout>