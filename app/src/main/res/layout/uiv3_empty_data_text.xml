<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_normal">

    <ImageView
        android:id="@+id/imgEmptyPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_large"
        android:contentDescription="@string/empty"
        android:src="@drawable/empty_basket" />

    <TextView
        android:id="@+id/txtEmptyMsg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgEmptyPage"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        android:text="@string/empty_basket_txt1"
        android:textColor="@color/uiv3_secondary_text_color"
        android:textSize="@dimen/primary_text_size" />

    <TextView
        android:id="@+id/txtEmptyMsg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEmptyMsg1"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:gravity="center"
        android:text="@string/empty_basket_txt2"
        android:textColor="@color/uiv3_secondary_text_color"
        android:textSize="@dimen/primary_text_size" />

    <Button
        android:id="@+id/btnBlankPage"
        style="@style/EmptyPageButtonStyle"
        android:layout_width="wrap_content"
        android:layout_below="@id/txtEmptyMsg2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_normal"
        android:paddingBottom="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small"
        android:text="@string/start_shopping_txt" />

</RelativeLayout>