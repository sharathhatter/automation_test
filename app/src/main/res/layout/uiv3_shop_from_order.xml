<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutAddAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:background="@color/uiv3_product_list_footer_bkg"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAddAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/add_footer"
            android:drawablePadding="@dimen/padding_small"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_small"
            android:text="@string/addAllProductsDisplay"
            android:textColor="@color/uiv3_product_list_footer_txt_color"
            android:textSize="@dimen/secondary_text_size" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutEmptyList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutAddAll"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_normal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgEmptyPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_large"
            android:contentDescription="@string/empty"
            android:src="@drawable/empty_basket" />

        <TextView
            android:id="@+id/txtEmptyMsg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgEmptyPage"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:text="@string/noProductsInCurrentCity"
            android:textColor="@color/uiv3_secondary_text_color"
            android:textSize="@dimen/primary_text_size" />

        <Button
            android:id="@+id/btnBlankPage"
            style="@style/EmptyPageButtonStyle"
            android:layout_width="wrap_content"
            android:layout_below="@id/txtEmptyMsg1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="Continue"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutAddAll"
        android:background="@color/white"
        android:visibility="gone"/>
</RelativeLayout>