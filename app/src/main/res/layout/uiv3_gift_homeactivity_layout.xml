<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/uiv3_tool_layout" />

    <LinearLayout
        android:id="@+id/layoutGiftProgressView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <android.support.design.widget.TabLayout
        android:id="@+id/slidingTabs"
        style="@style/BaseAppTheme.TabStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/uiv3_divider_color" />

    <com.bigbasket.mobileapp.view.uiv3.NonSwipeableViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>