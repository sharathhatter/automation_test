<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/uiv3_list_dark_bkg" />

    <TextView
        android:id="@+id/txtNavListRowHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/uiv3_divider_color"
        android:paddingBottom="@dimen/padding_mini"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:paddingTop="@dimen/padding_mini"
        android:textColor="@color/uiv3_primary_text_color"
        android:textSize="@dimen/primary_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/uiv3_list_dark_bkg" />
</LinearLayout>