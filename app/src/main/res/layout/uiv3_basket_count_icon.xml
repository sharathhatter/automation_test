<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.AppCompat.ActionButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true">

    <ImageView
        android:id="@+id/imgViewBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_basket"
        android:contentDescription="@string/viewBasket" />

    <TextView
        android:id="@+id/txtNumItemsInBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/imgViewBasket"
        android:layout_alignTop="@id/imgViewBasket"
        android:layout_marginTop="-8dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/rounded_square"
        android:paddingBottom="1dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size" />
</RelativeLayout>