<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbarMain"
        layout="@layout/uiv3_tool_layout" />

    <include
        android:id="@+id/layoutCheckoutFooter"
        layout="@layout/uiv3_checkout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:id="@+id/scrollViewPaymentOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutCheckoutFooter"
        android:layout_below="@id/toolbarMain"
        android:background="@color/uiv3_list_bkg_color">

        <LinearLayout
            android:id="@+id/layoutPaymentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutCheckoutProgressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>


            <LinearLayout
                android:id="@+id/layoutChoosePayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_normal"
                android:paddingTop="@dimen/padding_normal">

                <TextView
                    android:id="@+id/lblAmountFromWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:padding="@dimen/padding_small"
                    android:layout_gravity="center"
                    android:text="@string/fromWalletMsg"
                    android:textColor="@color/uiv3_dialog_header_text_bkg"
                    android:textSize="@dimen/primary_text_size" />

                <com.bigbasket.mobileapp.view.PaymentMethodsView
                    android:id="@+id/layoutPaymentOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                </com.bigbasket.mobileapp.view.PaymentMethodsView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layoutVoucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/padding_normal"
                android:paddingLeft="@dimen/margin_22"
                android:paddingRight="@dimen/margin_22"
                android:paddingTop="@dimen/padding_normal">

                <TextView
                    android:id="@+id/txtApplyVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawablePadding="@dimen/padding_normal"
                    android:text="@string/applyVoucher"
                    style="@style/RippleStyle"
                    android:textColor="@color/uiv3_dialog_header_text_bkg"
                    android:textSize="@dimen/secondary_text_size" />

                <TextView
                    android:id="@+id/txtApplicableVoucherCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_toRightOf="@id/txtApplyVoucher"
                    android:gravity="right"
                    android:textColor="@color/uiv3_secondary_text_color" />

                <TextView
                    android:id="@+id/txtRemoveVoucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/RippleStyle"
                    android:clickable="true"
                    android:drawablePadding="@dimen/padding_normal"
                    android:drawableRight="@drawable/ic_highlight_remove_grey600_24dp"
                    android:gravity="center_vertical"
                    android:text="@string/removeVoucher"
                    android:textColor="@color/uiv3_dialog_header_text_bkg"
                    android:textSize="@dimen/primary_text_size"
                    android:visibility="gone" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/layoutOrderSummaryInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="vertical"
                android:padding="@dimen/padding_normal">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutPaymentInProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/lblOrderPlaced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:gravity="center"
            android:text="@string/orderPlacedTakingToPaymentGateway"
            android:textSize="@dimen/heading_2_text_size" />
        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:indeterminate="true"/>

    </LinearLayout>
</RelativeLayout>