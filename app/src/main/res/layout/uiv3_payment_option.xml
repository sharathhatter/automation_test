<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.order.uiv3.PaymentSelectionActivity">

    <include
        android:id="@+id/toolbarMain"
        layout="@layout/uiv3_tool_layout" />

    <include
        android:id="@+id/layoutCheckoutFooter"
        layout="@layout/uiv3_checkout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:id="@+id/scrollViewPaymentOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutCheckoutFooter"
        android:layout_below="@id/toolbarMain"
        android:background="@color/uiv3_list_bkg_color">

        <LinearLayout
            android:id="@+id/layoutPaymentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutCheckoutProgressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
            <LinearLayout
                android:id="@+id/layoutChoosePayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_normal"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingTop="@dimen/padding_normal">

                <TextView
                    android:id="@+id/lblAmountFromWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:padding="@dimen/padding_small"
                    android:text="@string/fromWalletMsg"
                    android:background="@color/white"
                    android:textColor="@color/uiv3_dialog_header_text_bkg"
                    android:textSize="@dimen/primary_text_size" />
                <LinearLayout
                    android:id="@+id/layoutVoucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/padding_normal"
                    android:paddingLeft="@dimen/margin_normal"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:paddingTop="@dimen/padding_normal">

                    <TextView
                        android:id="@+id/txtApplicableVoucherCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/uiv3_secondary_text_color" />
                    <EditText
                        android:id="@+id/editTextVoucherCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/enterVoucher"
                        android:inputType="text"
                        android:imeActionLabel="@string/apply"
                        android:imeOptions="actionDone"
                        android:textColor="@color/uiv3_primary_text_color"
                        android:textSize="@dimen/primary_text_size"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/txtApplyVoucher"
                        style="@style/RippleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/apply_button_rounded_background"
                        android:clickable="true"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingBottom="@dimen/padding_mini"
                        android:paddingTop="@dimen/padding_mini"
                        android:paddingLeft="@dimen/margin_small"
                        android:text="@string/applyVoucher"
                        android:textColor="@color/uiv3_dialog_header_text_bkg"
                        android:textSize="@dimen/primary_text_size" />

                    <TextView
                        android:id="@+id/txtRemoveVoucher"
                        style="@style/RippleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:text="@string/removeVoucher"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/secondary_text_size"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingBottom="@dimen/padding_mini"
                        android:paddingTop="@dimen/padding_mini"
                        android:paddingLeft="@dimen/margin_small"
                        android:background="@drawable/remove_button_rounded_background"
                        android:visibility="gone" />
                </LinearLayout>

                <com.bigbasket.mobileapp.view.PaymentMethodsView
                    android:id="@+id/layoutPaymentOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                </com.bigbasket.mobileapp.view.PaymentMethodsView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutOrderSummaryInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="vertical"
                android:padding="@dimen/padding_normal">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutPaymentInProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/lblOrderPlaced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:gravity="center"
            android:text="@string/orderPlacedTakingToPaymentGateway"
            android:textSize="@dimen/heading_2_text_size" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_normal"
            android:indeterminate="true" />

    </LinearLayout>
</RelativeLayout>