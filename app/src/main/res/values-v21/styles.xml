<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BBNavDrawerTheme" parent="BaseAppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BBNavDrawerTheme.SpinnerDatePickerTheme" parent="BaseAppTheme">
        <item name="android:dialogTheme">@style/BBNavDrawerTheme.SpinnerDatePicker.DialogTheme
        </item>
        <item name="android:datePickerStyle">
            @style/BBNavDrawerTheme.SpinnerDatePicker.DatePickerTheme
        </item>
    </style>

    <style name="BBNavDrawerTheme.SpinnerDatePicker.DialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">
            @style/BBNavDrawerTheme.SpinnerDatePicker.DatePickerTheme
        </item>
    </style>

    <style name="BBNavDrawerTheme.SpinnerDatePicker.DatePickerTheme" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="WindowStyle">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="FormButtonStyle" parent="@style/DefaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ripple_footer_button</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="RoundedFormButtonStyle" parent="@style/FormButtonStyle">
        <item name="android:background">@drawable/ripple_rounded_form_button</item>
    </style>

    <style name="RoundedFormButtonStyle.Location" parent="@style/FormButtonStyle">
        <item name="android:background">@drawable/ripple_rounded_form_button_loc</item>
    </style>

    <style name="CancelFormButtonStyle" parent="@style/FormButtonStyle">
        <item name="android:background">@drawable/ripple_cancel_form_button</item>
    </style>

    <style name="MoreButtonStyle" parent="@style/DefaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_mini</item>
        <item name="android:paddingBottom">@dimen/padding_mini</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:background">@drawable/ripple_footer_button</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:text">@string/moreAllCaps</item>
    </style>

    <style name="EmptyPageButtonStyle" parent="@style/DefaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ripple_footer_button</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="RippleStyle">
        <item name="android:background">@drawable/ripple</item>
    </style>

    <style name="BottomButtonStyle">
        <item name="android:background">@drawable/ripple_footer_button</item>
    </style>
</resources>