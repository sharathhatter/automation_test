<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BBNavDrawerTheme" parent="BaseAppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BBNavDrawerTheme.SpinnerDatePickerTheme" parent="BaseAppTheme">
        <item name="android:dialogTheme">@style/BBNavDrawerTheme.SpinnerDatePicker.DialogTheme</item>
        <item name="android:datePickerStyle">@style/BBNavDrawerTheme.SpinnerDatePicker.DatePickerTheme
        </item>
    </style>

    <style name="BBNavDrawerTheme.SpinnerDatePicker.DialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/BBNavDrawerTheme.SpinnerDatePicker.DatePickerTheme
        </item>
    </style>

    <style name="BBNavDrawerTheme.SpinnerDatePicker.DatePickerTheme" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="WindowStyle">
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>