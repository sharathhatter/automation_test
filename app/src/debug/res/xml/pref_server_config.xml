<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="server_address"
        android:title="@string/pref_title_server_address"
        android:defaultValue="@string/pref_default_server_address"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="http_logging_level"
        android:title="@string/pref_http_logging_level"
        android:defaultValue="NONE"
        android:entries="@array/http_logging_level_entires"
        android:entryValues="@array/http_logging_level_entires"/>

</PreferenceScreen>
