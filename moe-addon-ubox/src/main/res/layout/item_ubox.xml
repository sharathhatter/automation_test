<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/picCrm"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/contentHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/picUsr"
        android:layout_toRightOf="@+id/picCrm"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="adadasdads a fa a fa daaaaa  "
            android:layout_height="wrap_content"
            android:textColor="#5F5F5F"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_timestamp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:text="asdasd"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_height="wrap_content"
            android:textColor="#929292"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_failed"
            style="@style/errorMsg"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:text="fadad"
            android:paddingRight="8dp"
            android:textColor="#929292"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/picUsr"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bkgrnd_user"
        android:src="@drawable/ic_person" />

    <ImageView
        android:layout_margin="10dp"
        android:layout_alignRight="@+id/contentHolder"
        android:layout_alignBottom="@+id/contentHolder"
        android:id="@+id/clickIdentifier"
        android:src="@drawable/action_link"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="20dp" />

</RelativeLayout>