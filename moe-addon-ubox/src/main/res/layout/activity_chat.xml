<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.moengage.addon.ubox.UnifiedInboxActivity" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        local:popupTheme="@style/Theme.AppCompat.Light" />

    <TextView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:textColor="@color/red"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:visibility="gone"
        android:id="@+id/messageNote"
        android:gravity="center"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ListView
        android:id="@+id/listChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/messageNote"
        android:layout_above="@+id/chatInput"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:visibility="gone" >
    </ListView>


    <TextView
        android:id="@+id/helperText"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/messageNote"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bubble_msg"
        android:drawableLeft="@mipmap/ic_launcher"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="left"
        android:textSize="16sp"
        android:drawablePadding="8dp"
        android:textColor="#5F5F5F"
        android:text="@string/txt_loading" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <RelativeLayout
        android:id="@+id/chatInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="5dp">

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:contentDescription="@string/content_desc_send"
            android:src="@drawable/send_icon" />

        <EditText
            android:id="@+id/inputMsg"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/btnSend"
            android:layout_alignTop="@+id/btnSend"
            android:layout_toLeftOf="@+id/btnSend"
            android:hint="@string/hint_input_chat" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/chatInput"
        android:background="@color/separator_line_color"/>

</RelativeLayout>