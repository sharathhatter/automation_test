<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.payuResponse.testapp.UserCardsActivity">

    <include
        android:id="@+id/toolbarMain"
        layout="@layout/layout_toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/toolbarMain">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/mbblogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bb_logo_transparent_bkg"
        android:layout_alignParentRight="true"

        android:layout_margin="20dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/mbblogo"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/layout_background"
            android:layout_margin="30dp"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/text_view_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs."
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/amt_txn_textColor" />

            <TextView
                android:id="@+id/text_view_transaction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction id : "
                android:textColor="@color/amt_txn_textColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ListView
                android:id="@+id/list_view_user_card"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:descendantFocusability="afterDescendants"
                android:layout_margin="10dp" />
        </LinearLayout>
    </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

