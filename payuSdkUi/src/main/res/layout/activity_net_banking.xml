<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.payuResponse.testapp.NetBankingActivity">


    <include
        android:id="@+id/toolbarMain"
        layout="@layout/layout_toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mbblogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bb_logo_transparent_bkg"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_below="@+id/mbblogo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".70"
            android:gravity="center"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:layout_margin="30dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/text_view_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs."
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/amt_txn_textColor"/>

            <TextView
                android:id="@+id/text_view_transaction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction id : "
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/amt_txn_textColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".30"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/layout_background"
            android:layout_margin="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Select Net banking (of your choice):"
                android:textColor="@android:color/black"
                 />

            <Spinner
                android:id="@+id/spinner_netbanking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>

            <Button
                android:id="@+id/button_pay_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Pay now"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
        </LinearLayout>
    </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
