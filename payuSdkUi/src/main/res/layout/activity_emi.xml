<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.payuResponse.testapp.EmiActivity">



    <include
        android:id="@+id/toolbarMain"
        layout="@layout/layout_toolbar" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1" >

        <ImageView
            android:id="@+id/mbblogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bb_logo_transparent_bkg"
            android:layout_gravity="right"
            android:layout_below="@+id/toolbarMain"
            android:layout_margin="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/layout_background"
            android:layout_margin="30dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/text_view_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs."
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/amt_txn_textColor"
                />

            <TextView
                android:id="@+id/text_view_transaction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction id : "
                android:textColor="@color/amt_txn_textColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/layout_background"
            android:layout_margin="30dp"
            android:padding="20dp">

            <Spinner
                android:id="@+id/spinner_emi_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>

            <Spinner
                android:id="@+id/spinner_emi_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edit_text_emi_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Card Number"
                        android:inputType="number"
                        android:maxLength="19" />

                    <EditText
                        android:id="@+id/edit_text_emi_name_on_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name on card"
                        android:maxLength="19" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText

                            android:id="@+id/edit_text_emi_expiry_month"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="5"
                            android:hint="MM"
                            android:inputType="number"
                            android:gravity="center"
                            android:maxLength="2" />

                        <EditText
                            android:id="@+id/edit_text_emi_expiry_year"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="5"
                            android:hint="YYYY"
                            android:inputType="number"
                            android:gravity="center"
                            android:maxLength="4" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edit_text_emi_cvv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="5"
                            android:hint="CVV"
                            android:inputType="number"
                            android:maxLength="4" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button_emi_pay_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emi Pay Now"
                android:background="@drawable/button_background"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="17sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
