<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/moe_activity_vertical_margin"
    android:paddingLeft="@dimen/moe_activity_horizontal_margin"
    android:paddingRight="@dimen/moe_activity_horizontal_margin"
    android:paddingTop="@dimen/moe_activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/moe_card_background"
>
    
    <TextView 
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:id="@+id/moe_message"    
    	android:textSize="16sp"
    />
    
    <TextView 
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_gravity="right"
    	android:id="@+id/moe_date"    
    />
    
</LinearLayout>
